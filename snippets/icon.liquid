{% comment %}
  Usage: {% render 'icon', name: 'hoodie', size: 28, class: 'icon' %}
  
  Parameters:
  - name: Icon name from the sprite (required)
  - size: Width/height in pixels (default: 24)
  - class: Additional CSS classes (optional)
{% endcomment %}

{% assign _size = size | default: 24 %}
<svg width="{{ _size }}" height="{{ _size }}" viewBox="0 0 24 24" fill="none"
     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
     class="{{ class }}" aria-hidden="true" focusable="false">
  <use href="{{ 'icons.svg' | asset_url }}#icon-{{ name }}"></use>
</svg>
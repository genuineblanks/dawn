/* Text Grid - Original Structure with Premium Effects */

/* Container */
.textGrid {
  width: 100%;
  margin: 0;
  padding: 0;
  background: transparent;
}

/* Home section layout */
.home-section .textGrid {
  display: grid;
  background: transparent !important;
  align-items: center;
  height: calc(100% - 200px); /* Increased to accommodate new footer */
}

/* When footer is enabled in text-grid section */
.text-grid .textGrid {
  min-height: calc(100vh - 280px); /* Ensure proper spacing for footer */
}

/* Button styling - PREMIUM GLASS MORPHISM BUTTONS */
.textGrid a {
  display: block;
  width: 100%;
  margin: 0;
  padding: 60px 40px;
  text-decoration: none;
  position: relative;
  cursor: pointer;
  overflow: hidden;
  transition: all 0.8s cubic-bezier(0.23, 1, 0.320, 1);
  border: none;
  outline: none;
  
  /* Glass Morphism Effect */
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 16px;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.12),
    inset 0 1px 0 rgba(255, 255, 255, 0.4),
    inset 0 -1px 0 rgba(0, 0, 0, 0.1);
}

/* Premium hover effects - Enhanced Glass */
.textGrid a:hover {
  transform: translateY(-8px) scale(1.005);
  box-shadow: 
    0 20px 60px rgba(0, 0, 0, 0.25),
    0 8px 32px rgba(0, 0, 0, 0.15),
    inset 0 1px 0 rgba(255, 255, 255, 0.6),
    inset 0 -1px 0 rgba(0, 0, 0, 0.15);
  border: 2px solid rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  filter: brightness(1.08) contrast(1.05);
  z-index: 10;
}

/* Enhanced glass overlay system */
.textGrid a::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    linear-gradient(135deg, 
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 50%,
      rgba(0, 0, 0, 0.05) 100%);
  z-index: 2;
  transition: all 0.6s ease;
  opacity: 0;
  border-radius: 14px;
}

.textGrid a:hover::before {
  opacity: 1;
  background: 
    linear-gradient(135deg, 
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(0, 0, 0, 0.02) 100%);
}

/* Shimmer effect */
.textGrid a::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.15), transparent);
  transition: left 0.8s cubic-bezier(0.23, 1, 0.320, 1);
  z-index: 5;
}

.textGrid a:hover::after {
  left: 100%;
}

/* Grid layout - PERFECT CENTER ALIGNMENT */
.textGrid .grid {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  max-width: 1200px;
  margin: 0 auto;
  gap: 30px;
  position: relative;
  z-index: 10;
  min-height: 100%;
}

.textGrid .grid__item {
  flex: 1;
  text-align: center;
  padding: 0 10px;
  position: relative;
  z-index: 15;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}

/* PREMIUM LUXURY TYPOGRAPHY SYSTEM - PERFECT CENTER */
.textGrid .grid__item h3 {
  font-family: 'Futura', 'Avenir Next', 'Century Gothic', 'Helvetica Neue', Arial, sans-serif;
  font-weight: 700;
  font-size: 3.5rem;
  line-height: 1.1;
  margin: 0;
  letter-spacing: 0.25em;
  text-transform: uppercase;
  word-wrap: break-word;
  hyphens: auto;
  color: #000000 !important;
  text-shadow: none;
  transition: all 0.5s ease;
  position: relative;
  font-variant: small-caps;
  text-align: center;
  align-self: center;
}

/* Subtitle styling (second grid item) */

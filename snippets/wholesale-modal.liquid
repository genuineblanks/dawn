            <option value="Other">Other</option>
          </select>
        </div>
      </fieldset>

      <!-- Additional Notes -->
      <fieldset class="wholesale-fieldset">
        <legend>Additional Notes</legend>
        <div class="wholesale-form-group">
          <label for="additional-notes">Special Requirements or Comments</label>
          <textarea id="additional-notes" name="additional_notes" rows="4" placeholder="Any special requirements, deadlines, or additional information..."></textarea>
        </div>
      </fieldset>

      <!-- Form Actions -->
      <div class="wholesale-form-actions">
        <button type="button" class="wholesale-btn-secondary" id="wholesale-cancel">
          Cancel
        </button>
        <button type="submit" class="wholesale-btn-primary" id="wholesale-submit">
          <span class="wholesale-btn-text">Submit Inquiry</span>
          <span class="wholesale-btn-loading" style="display: none;">
            <svg class="wholesale-spinner" width="20" height="20" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none" opacity="0.25"/>
              <path d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" fill="currentColor"/>
            </svg>
            Submitting...
          </span>
        </button>
      </div>

      <!-- Error Messages -->
      <div id="wholesale-errors" class="wholesale-errors" role="alert" aria-live="polite" style="display: none;"></div>
      
      <!-- Success Message -->
      <div id="wholesale-success" class="wholesale-success" role="alert" aria-live="polite" style="display: none;"></div>
    </form>
  </div>
</div>
<!-- Quick Guide Styles -->
<style>
/* Quick Guide Modal Overlay */
.quick-guide-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(8px);
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.quick-guide-overlay.active {
  opacity: 1;
  visibility: visible;
}

/* Quick Guide Modal */
.quick-guide-modal {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 90vw;
  max-width: 800px;
  max-height: 90vh;
  background: var(--v10-bg-modal, #1f1f1f);
  border-radius: 16px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  overflow: hidden;
  transition: transform 0.3s ease;
}

.quick-guide-overlay.active .quick-guide-modal {
  transform: translate(-50%, -50%) scale(1);
}

/* Quick Guide Header */
.quick-guide-header {
  background: linear-gradient(135deg, var(--v10-bg-secondary, #2a2a2a) 0%, var(--v10-bg-tertiary, #333333) 100%);
  border-bottom: 1px solid var(--v10-border-primary, #404040);
  padding: 24px;
}

.quick-guide-header-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.quick-guide-header-text h2 {
  margin: 0 0 8px 0;
  color: var(--v10-text-primary, #ffffff);
  font-size: 24px;
  font-weight: 700;
}

.quick-guide-header-text p {
  margin: 0;
  color: var(--v10-text-secondary, #e5e5e5);
  font-size: 16px;
}

.quick-guide-close {
  background: none;
  border: none;
  color: var(--v10-text-muted, #b3b3b3);
  cursor: pointer;
  padding: 8px;
  border-radius: 8px;
  transition: all 0.2s ease;
}

.quick-guide-close:hover {
  background: var(--v10-bg-hover, #404040);
  color: var(--v10-text-primary, #ffffff);
}

/* Quick Guide Body */
.quick-guide-body {
  padding: 24px;
  max-height: calc(90vh - 140px);
  overflow-y: auto;
}

/* Quick Process Overview */
.quick-process-overview {
  margin-bottom: 32px;
}

.quick-process-title {
  text-align: center;
  margin-bottom: 24px;
}

.quick-process-title h3 {
  margin: 0 0 8px 0;
  color: var(--v10-text-primary, #ffffff);
  font-size: 20px;
  font-weight: 600;
}

.quick-process-title p {
  margin: 0;
  color: var(--v10-text-secondary, #e5e5e5);
  font-size: 14px;
}

.quick-process-steps {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.quick-step {
  display: flex;
  align-items: flex-start;
  gap: 16px;
  padding: 20px;
  background: var(--v10-bg-card, #2a2a2a);
  border-radius: 12px;
  border: 1px solid var(--v10-border-secondary, #333333);
}

.quick-step-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: var(--v10-accent-primary, #a3a3a3);
  color: var(--v10-bg-primary, #1a1a1a);
  font-weight: 700;
  font-size: 16px;
  border-radius: 50%;
  flex-shrink: 0;
}

.quick-step-content h4 {
  margin: 0 0 8px 0;
  color: var(--v10-text-primary, #ffffff);
  font-size: 16px;
  font-weight: 600;
}

.quick-step-content p {
  margin: 0;
  color: var(--v10-text-secondary, #e5e5e5);
  font-size: 14px;
  line-height: 1.5;
}

/* Quick Sample Types */
.quick-sample-types {
  margin-bottom: 32px;
}

.quick-sample-types h4 {
  margin: 0 0 16px 0;
  color: var(--v10-text-primary, #ffffff);
  font-size: 18px;
  font-weight: 600;
}

.quick-sample-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 16px;
}

.quick-sample-card {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px;
  background: var(--v10-bg-card, #2a2a2a);
  border: 1px solid var(--v10-border-secondary, #333333);
  border-radius: 12px;
}

.quick-sample-icon {
  font-size: 24px;
  flex-shrink: 0;
}

.quick-sample-info strong {
  display: block;
  color: var(--v10-text-primary, #ffffff);
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 4px;
}

.quick-sample-price {
  display: inline-block;
  background: var(--v10-accent-primary, #a3a3a3);
  color: var(--v10-bg-primary, #1a1a1a);
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 600;
  margin-left: 8px;
}

.quick-sample-info p {
  margin: 8px 0 0 0;
  color: var(--v10-text-muted, #b3b3b3);
  font-size: 12px;
}

/* Quick Tips */
.quick-tips h4 {
  margin: 0 0 16px 0;
  color: var(--v10-text-primary, #ffffff);
  font-size: 18px;
  font-weight: 600;
}

.quick-tips-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.quick-tip {
  display: flex;
  align-items: center;
  gap: 12px;
  color: var(--v10-text-secondary, #e5e5e5);
  font-size: 14px;
}

.quick-tip svg {
  color: var(--v10-accent-success, #22c55e);
  flex-shrink: 0;
}

/* Quick Guide Actions */
.quick-guide-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  margin-top: 32px;
  padding-top: 24px;
  border-top: 1px solid var(--v10-border-secondary, #333333);
}

.quick-guide-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 20px;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  text-decoration: none;
  border: none;
}

.quick-guide-btn-secondary {
  background: var(--v10-bg-tertiary, #333333);
  color: var(--v10-text-secondary, #e5e5e5);
}

.quick-guide-btn-secondary:hover {
  background: var(--v10-bg-hover, #404040);
  color: var(--v10-text-primary, #ffffff);
}

.quick-guide-btn-primary {
  background: var(--v10-accent-primary, #a3a3a3);
  color: var(--v10-bg-primary, #1a1a1a);
}

.quick-guide-btn-primary:hover {
  background: var(--v10-accent-secondary, #d4d4d4);
  transform: translateY(-1px);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .quick-guide-modal {
    width: 95vw;
    margin: 20px;
  }
  
  .quick-guide-header,
  .quick-guide-body {
    padding: 20px;
  }
  
  .quick-sample-grid {
    grid-template-columns: 1fr;
  }
  
  .quick-guide-actions {
    flex-direction: column;
  }
  
  .quick-step {
    flex-direction: column;
    text-align: center;
  }
}
</style>
{% comment %}
  Section: about-company-section.liquid
  Shopify Online Store 2.0 Compatible
  File path: sections/about-company-section.liquid
{% endcomment %}

{{ 'section-about-company.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .about-company-{{ section.id }} {
    height: {{ section.settings.section_height }}vh;
    min-height: {{ section.settings.min_height }}px;
    --section-overlay-color: {{ section.settings.overlay_color.red }}, {{ section.settings.overlay_color.green }}, {{ section.settings.overlay_color.blue }};
    --section-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --section-text-color: {{ section.settings.text_color }};
  }

  .about-company-{{ section.id }} .company-top {
    {% if section.settings.bg_image %}
      background-image: url('{{ section.settings.bg_image | image_url: width: 1920 }}');
    {% endif %}
  }

  .about-company-{{ section.id }} .company-bottom {
    {% if section.settings.bg_image_2 %}
      background-image: url('{{ section.settings.bg_image_2 | image_url: width: 1920 }}');
    {% elsif section.settings.bg_image %}
      background-image: url('{{ section.settings.bg_image | image_url: width: 1920 }}');
    {% endif %}
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<div class="color-{{ section.settings.color_scheme }} gradient {{ section.settings.additional_class }}">
  <div
    id="AboutCompany-{{ section.id }}"
    class="about-company-{{ section.id }} about-company-section section-{{ section.id }}-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
  >
    <!-- Central divider line -->
    <div class="about-company__divider"></div>
    
    <!-- Top Half Section -->
    <div 
      class="about-company__half company-top" 
      onclick="goToAboutTop{{ section.id }}()" 
      tabindex="0" 
      role="button" 
      aria-label="{{ section.settings.company_title | default: 'Learn more about our story' | escape }}"
    >
      {%- if section.settings.bg_image != blank -%}
        <div class="about-company__media">
          {{
            section.settings.bg_image
            | image_url: width: 1920
            | image_tag:
              width: section.settings.bg_image.width,
              height: section.settings.bg_image.height,
              class: 'about-company__bg-image',
              sizes: '100vw',
              widths: '375, 550, 750, 1100, 1500, 1780, 2000',
              fetchpriority: fetch_priority,
              alt: section.settings.company_title | default: 'About our company'
          }}
        </div>
      {%- endif -%}
      
      <div class="about-company__overlay"></div>
      
      <div class="about-company__content">
        <div class="about-company__content-wrapper">
          {% if section.settings.company_title != blank %}
            <h2 class="about-company__title">{{ section.settings.company_title }}</h2>
          {% endif %}
          
          {% if section.settings.company_description != blank %}
            <p class="about-company__description">
              {{ section.settings.company_description }}
            </p>
          {% endif %}
          
          {% if section.settings.button_text != blank %}
            <a 
              href="{{ section.settings.button_url | default: '#' }}" 
              class="about-company__button"
              onclick="goToAboutTop{{ section.id }}(); return false;"
              aria-label="{{ section.settings.button_text | escape }} - {{ section.settings.company_title | default: 'Learn more' | escape }}"
            >
              {{ section.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Bottom Half Section -->
    <div 
      class="about-company__half company-bottom" 
      onclick="goToAboutBottom{{ section.id }}()" 
      tabindex="0" 
      role="button" 
      aria-label="{{ section.settings.company_title_2 | default: 'Learn more about our mission' | escape }}"
    >
      {%- if section.settings.bg_image_2 != blank -%}
        <div class="about-company__media">
          {{
            section.settings.bg_image_2
            | image_url: width: 1920
            | image_tag:
              width: section.settings.bg_image_2.width,
              height: section.settings.bg_image_2.height,
              class: 'about-company__bg-image',
              sizes: '100vw',
              widths: '375, 550, 750, 1100, 1500, 1780, 2000',
              fetchpriority: fetch_priority,
              alt: section.settings.company_title_2 | default: 'About our mission'
          }}
        </div>
      {%- endif -%}
      
      <div class="about-company__overlay"></div>
      
      <div class="about-company__content">
        <div class="about-company__content-wrapper">
          {% if section.settings.company_title_2 != blank %}
            <h2 class="about-company__title">{{ section.settings.company_title_2 }}</h2>
          {% endif %}
          
          {% if section.settings.company_description_2 != blank %}
            <p class="about-company__description">
              {{ section.settings.company_description_2 }}
            </p>
          {% endif %}
          
          {% if section.settings.button_2_text != blank %}
            <a 
              href="{{ section.settings.button_2_url | default: '#' }}" 
              class="about-company__button"
              onclick="goToAboutBottom{{ section.id }}(); return false;"
              aria-label="{{ section.settings.button_2_text | escape }} - {{ section.settings.company_title_2 | default: 'Learn more' | escape }}"
            >
              {{ section.settings.button_2_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
    
    {% if section.settings.show_scroll_indicator %}
      <div class="about-company__scroll-indicator">
        <div class="about-company__scroll-line"></div>
        <span class="about-company__scroll-text">{{ section.settings.scroll_text | default: 'Scroll' }}</span>
      </div>
    {% endif %}
  </div>
</div>

<script>
  // Navigation Functions for Section {{ section.id }}
  function goToAboutTop{{ section.id }}() {
    // Add premium transition effect
    const topSection = document.querySelector('.about-company-{{ section.id }} .company-top');
    if (topSection) {
      topSection.style.transform = 'scale(1.05)';
      topSection.style.filter = 'brightness(1.2)';
    }
    
    setTimeout(() => {
      window.location.href = '{{ section.settings.button_url | default: "#" }}';
      console.log('Navigating to About Top Section');
    }, 400);
  }

  function goToAboutBottom{{ section.id }}() {
    // Add premium transition effect
    const bottomSection = document.querySelector('.about-company-{{ section.id }} .company-bottom');
    if (bottomSection) {
      bottomSection.style.transform = 'scale(1.05)';
      bottomSection.style.filter = 'brightness(1.2)';
    }
    
    setTimeout(() => {
      window.location.href = '{{ section.settings.button_2_url | default: "#" }}';
      console.log('Navigating to About Bottom Section');
    }, 400);
  }

  // Enhanced Interaction Effects for Section {{ section.id }}
  document.addEventListener('DOMContentLoaded', function() {
    const aboutSection = document.querySelector('.about-company-{{ section.id }}');
    if (!aboutSection) return;

    const halves = aboutSection.querySelectorAll('.about-company__half');
    const scrollIndicator = aboutSection.querySelector('.about-company__scroll-indicator');

    // Enhanced hover and interaction effects
    halves.forEach(half => {
      // Mouse interactions
      half.addEventListener('mouseenter', function() {
        this.style.transform = 'scale(1.01)';
        this.style.filter = 'brightness(1.05) contrast(1.02)';
        
        const content = this.querySelector('.about-company__content-wrapper');
        if (content) {
          content.style.transform = 'translateY(-3px)';
        }
      });
      
      half.addEventListener('mouseleave', function() {
        this.style.transform = 'scale(1)';
        this.style.filter = 'brightness(1) contrast(1)';
        
        const content = this.querySelector('.about-company__content-wrapper');
        if (content) {
          content.style.transform = 'translateY(0)';
        }
      });
      
      // Touch interactions for mobile
      half.addEventListener('touchstart', function() {
        this.style.transform = 'scale(0.99)';
      });
      
      half.addEventListener('touchend', function() {
        this.style.transform = 'scale(1)';
      });
      
      // Focus states for accessibility
      half.addEventListener('focus', function() {
        this.style.outline = '2px solid rgba(var(--section-text-color), 0.6)';
        this.style.outlineOffset = '-2px';
      });
      
      half.addEventListener('blur', function() {
        this.style.outline = 'none';
      });
    });

    // Scroll indicator animation
    if (scrollIndicator) {
      window.addEventListener('scroll', function() {
        const scrollProgress = window.pageYOffset / (document.documentElement.scrollHeight - window.innerHeight);
        const line = scrollIndicator.querySelector('.about-company__scroll-line');
        if (line) {
          line.style.transform = `scaleY(${Math.min(scrollProgress * 2, 1)})`;
        }
      });
    }

    // Intersection Observer for entrance animations
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, { 
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    halves.forEach(half => {
      half.style.opacity = '0';
      half.style.transform = 'translateY(30px)';
      half.style.transition = 'opacity 0.8s ease-out, transform 0.8s ease-out';
      observer.observe(half);
    });

    // Smooth section entrance
    setTimeout(() => {
      aboutSection.style.opacity = '1';
    }, 100);
  });

  // Performance optimization - Passive event listeners
  document.addEventListener('DOMContentLoaded', function() {
    const aboutSection = document.querySelector('.about-company-{{ section.id }}');
    if (aboutSection) {
      aboutSection.addEventListener('scroll', function() {
        // Scroll handling if needed
      }, { passive: true });
    }
  });
</script>


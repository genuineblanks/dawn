          {{ section.settings.banner_heading }}
        </h2>
      {% endif %} 
      {% if section.settings.banner_paragraph != blank %}
        <p class="premium-subtitle">{{ section.settings.banner_paragraph }}</p>
      {% endif %}
      <div class="towbutonbaner premium-buttons">
      {% if section.settings.banner_subtext1 != blank %}
        <a {% if section.settings.banner_link_url1 != blank %}
            href="{{ section.settings.banner_link_url1 }}"
          {% endif %} class="banner_subtext2 changeSection premium-btn active" data-collection="luxury">{{ section.settings.banner_subtext1 }}</a>
      {% endif %}
      {% if section.settings.banner_subtext2 != blank %}
        <a {% if section.settings.banner_link_url2 != blank %}
            href="{{ section.settings.banner_link_url2 }}"
          {% endif %} class="banner_subtext1 changeSection premium-btn" data-collection="relaxed">{{ section.settings.banner_subtext2 }}</a>
      {% endif %}
        
      </div>
      
       {%- if section.settings.banner_link_txt != blank -%}
        <a
          {% if section.settings.banner_link_url != blank %}
            href="{{ section.settings.banner_link_url }}"
          {% endif %}
          class="link premium-link"
        >
          {{- section.settings.banner_link_txt -}}
        </a>
      {%- endif -%}
          <span class="no-minimum premium-no-min">NO MINIMUMS</span>
    </div>
    <ul class="banner__box content-container content-container--full-width-mobile color-{{ section.settings.color_scheme_section }} gradient">
      {%- for block in section.blocks -%}
      <li class="item-banner premium-item">
        {%- case block.type -%}

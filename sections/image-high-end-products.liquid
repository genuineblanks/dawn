{% style %}
  /* Base styles for product grid */
  ul.banner__box {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 3px;
    justify-content: center;
    padding: 0;
    margin: 0;
  }

  /* Dynamic grid sizing based on product count */
  {% if productBlockCount > 0 %}
    .product-count-{{ productBlockCount }} .banner__box {
      padding: 0;
    }

    .product-count-{{ productBlockCount }} ul.banner__box li {
      display: block;
      margin: 0 !important;
      flex: 1 1 auto;
      max-width: {% if productBlockCount <= 3 %}calc(33.333% - 2px){% elsif productBlockCount == 4 %}calc(25% - 2px){% elsif productBlockCount == 5 %}calc(20% - 2px){% else %}calc(16.666% - 2px){% endif %};
      min-width: 150px;
    }
  {% endif %}

  /* Image styling */
  ul.banner__box li.item-banner img {
    max-height: 165px;
    width: 100%;
    margin: 0;
    object-fit: contain;
    border: 0 none;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    {% if productBlockCount > 0 %}
      .product-count-{{ productBlockCount }} ul.banner__box li {
        max-width: {% if productBlockCount <= 2 %}calc(50% - 2px){% else %}calc(33.333% - 2px){% endif %};
      }
    {% endif %}
  }

  @media (max-width: 480px) {
    {% if productBlockCount > 0 %}
      .product-count-{{ productBlockCount }} ul.banner__box li {
        max-width: calc(50% - 2px);
      }
    {% endif %}
  }
{% endstyle %}


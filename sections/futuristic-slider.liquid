{{ 'futuristic-slider.css' | asset_url | stylesheet_tag }}

<div class="premium-slider" data-section-id="{{ section.id }}" style="--slider-height-desktop: {{ section.settings.slider_height_desktop }}vh; --slider-height-mobile: {{ section.settings.slider_height_mobile }}vh;">
  <div class="premium-slider__container">
    <div class="swiper premium-swiper" 
         data-autoplay="{{ section.settings.autoplay }}" 
         data-speed="{{ section.settings.autoplay_speed }}"
         data-effect="{{ section.settings.transition_effect }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide premium-slide" {{ block.shopify_attributes }}>
            <div class="premium-slide__content-wrapper" style="--content-width: {{ section.settings.content_width }}%;">
              
              {% comment %} Media Section {% endcomment %}
              {% if block.settings.image != blank or block.settings.video_url != blank %}
                <div class="premium-slide__media" style="--media-width: {{ block.settings.media_width }}%;">
                  {% if block.settings.video_url != blank %}
                    <div class="premium-slide__video-container">
                      <video class="premium-slide__video" autoplay muted loop playsinline>
                        <source src="{{ block.settings.video_url }}" type="video/mp4">
                      </video>
                    </div>
                  {% elsif block.settings.image != blank %}
                    <div class="premium-slide__image-container">
                      {{ block.settings.image | image_url: width: 2048 | image_tag: 
                        class: 'premium-slide__image', 
                        loading: 'lazy',
                        alt: block.settings.image.alt | escape
                      }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
              
              {% comment %} Text Content {% endcomment %}
              {% if block.settings.heading != blank or block.settings.subheading != blank or block.settings.button_text != blank %}
                <div class="premium-slide__text" style="--text-width: {{ block.settings.text_width }}%;">
                  <div class="premium-slide__text-inner">
                    {% if block.settings.overline != blank %}
                      <div class="premium-slide__overline">{{ block.settings.overline }}</div>
                    {% endif %}
                    
                    {% if block.settings.heading != blank %}
                      <h2 class="premium-slide__heading h1">
                        {{ block.settings.heading }}
                      </h2>
                    {% endif %}
                    
                    {% if block.settings.subheading != blank %}
                      <div class="premium-slide__subheading">
                        {{ block.settings.subheading }}
                      </div>
                    {% endif %}
                    
                    {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                      <div class="premium-slide__button-wrapper">
                        <a href="{{ block.settings.button_url }}" 
                           class="premium-slide__button btn btn--{{ block.settings.button_style }}">
                          <span class="premium-slide__button-text">{{ block.settings.button_text }}</span>
                          <svg class="premium-slide__button-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path d="M4.16669 10H15.8334M15.8334 10L10 4.16666M15.8334 10L10 15.8333" 
                                  stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </a>
                      </div>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
              
            </div>
          </div>
        {% endfor %}
      </div>
      
      {% if section.settings.show_navigation and section.blocks.size > 1 %}
        <div class="premium-slider__navigation">
          <button class="premium-slider__nav premium-slider__nav--prev swiper-button-prev" 
                  type="button" aria-label="Previous slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <button class="premium-slider__nav premium-slider__nav--next swiper-button-next" 
                  type="button" aria-label="Next slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      {% endif %}
      
      {% if section.settings.show_pagination and section.blocks.size > 1 %}
        <div class="premium-slider__pagination swiper-pagination"></div>
      {% endif %}
      
      {% if section.settings.show_progress and section.blocks.size > 1 %}
        <div class="premium-slider__progress">
          <div class="premium-slider__progress-bar"></div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">

<script>
document.addEventListener('DOMContentLoaded', function() {
  const swiperElement = document.querySelector('.premium-swiper');
  if (!swiperElement) return;
  
  const autoplay = swiperElement.dataset.autoplay === 'true';
  const speed = parseInt(swiperElement.dataset.speed) * 1000 || 5000;
  const effect = swiperElement.dataset.effect || 'fade';
  
  new Swiper(swiperElement, {
    modules: [Swiper.Navigation, Swiper.Pagination, Swiper.Autoplay, Swiper.EffectFade],
    loop: true,
    speed: 800,
    effect: effect,
    fadeEffect: {
      crossFade: true
    },
    autoplay: autoplay ? {
      delay: speed,
      disableOnInteraction: false,
      pauseOnMouseEnter: true
    } : false,
    navigation: {
      nextEl: '.premium-slider__nav--next',
      prevEl: '.premium-slider__nav--prev',
    },
    pagination: {
      el: '.premium-slider__pagination',
      clickable: true,
      renderBullet: function (index, className) {
        return '<span class="' + className + '"></span>';
      },
    },
    on: {
      autoplayTimeLeft(s, time, progress) {
        const progressBar = document.querySelector('.premium-slider__progress-bar');
        if (progressBar) {
          progressBar.style.setProperty('--progress', 1 - progress);
        }
      }
    }
  });
});
</script>


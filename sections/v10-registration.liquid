{{ 'v10-registration.css' | asset_url | stylesheet_tag }}
<script src="{{ 'v10-registration.js' | asset_url }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="v10-registration-page section-{{ section.id }}-padding" data-section-id="{{ section.id }}">
  <div class="v10-registration-container">
    <!-- Theme Toggle Buttons -->
    <div class="v10-theme-toggle-wrapper">
      <button class="v10-theme-btn v10-theme-btn--light" data-theme="light" aria-label="Light mode">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="5"></circle>
          <line x1="12" y1="1" x2="12" y2="3"></line>
          <line x1="12" y1="21" x2="12" y2="23"></line>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
          <line x1="1" y1="12" x2="3" y2="12"></line>
          <line x1="21" y1="12" x2="23" y2="12"></line>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
        </svg>
      </button>
      <button class="v10-theme-btn v10-theme-btn--dark" data-theme="dark" aria-label="Dark mode">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </button>
    </div>

    <!-- Registration Card -->
    <div class="v10-registration-card">
      <!-- Header Section -->
      <div class="v10-registration-header">
        <h1 class="v10-registration-title">{{ section.settings.title | default: 'GENUINEBLANKS - Customer Registration' }}</h1>
        <p class="v10-registration-subtitle">{{ section.settings.subtitle | default: 'Join our exclusive network of premium fashion brands and designers' }}</p>
      </div>

      <!-- Registration Form -->
      {%- form 'create_customer', novalidate: 'novalidate', class: 'v10-registration-form', id: 'v10-registration-form' -%}
        {%- if form.errors -%}
          <div class="v10-form-errors" role="alert">
            <div class="v10-error-header">
              <svg class="v10-error-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M10 0C4.48 0 0 4.48 0 10s4.48 10 10 10 10-4.48 10-10S15.52 0 10 0zm1 15h-2v-2h2v2zm0-4h-2V5h2v6z" fill="currentColor"/>
              </svg>
              <span>Please correct the following errors:</span>
            </div>
            <ul class="v10-error-list">
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    {{ form.errors.translated_fields[field] | capitalize }}: {{ form.errors.messages[field] }}
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <!-- Company Information Section -->
        <div class="v10-form-section">
          <h2 class="v10-section-title">Company Information</h2>
          
          <div class="v10-form-grid">
            <!-- Company Name -->
            <div class="v10-form-group v10-form-group--full">
              <label for="RegisterForm-CompanyName" class="v10-form-label required">
                Company name
              </label>
              <input
                type="text"
                name="customer[note][company_name]"
                id="RegisterForm-CompanyName"
                class="v10-form-input"
                placeholder="Registered Business Name (or DBA, if applicable)"
                required
                aria-required="true"
              >
              <span class="v10-form-helper">Registered Business Name (or DBA, if applicable)</span>
            </div>

            <!-- Company Email -->
            <div class="v10-form-group v10-form-group--half">
              <label for="RegisterForm-Email" class="v10-form-label required">
                Company Email
              </label>
              <input
                type="email"
                name="customer[email]"
                id="RegisterForm-Email"
                class="v10-form-input"
                placeholder="Primary Email for Business Correspondence"
                required
                aria-required="true"
                {% if form.email %}value="{{ form.email }}"{% endif %}
              >
              <span class="v10-form-helper">Primary Email for Business Correspondence</span>
            </div>

            <!-- Password -->
            <div class="v10-form-group v10-form-group--half">
              <label for="RegisterForm-Password" class="v10-form-label required">
                Password
              </label>
              <input
                type="password"
                name="customer[password]"
                id="RegisterForm-Password"
                class="v10-form-input"
                placeholder="Create a secure password"
                required
                aria-required="true"
                minlength="5"
              >
              <span class="v10-form-helper">Minimum 5 characters</span>
            </div>
          </div>
        </div>

        <!-- Personal Information Section -->
        <div class="v10-form-section">
          <h2 class="v10-section-title">Contact Details</h2>
          
          <div class="v10-form-grid">
            <!-- First Name -->
            <div class="v10-form-group v10-form-group--half">
              <label for="RegisterForm-FirstName" class="v10-form-label required">
                First Name
              </label>
              <input
                type="text"
                name="customer[first_name]"
                id="RegisterForm-FirstName"
                class="v10-form-input"
                placeholder="Your First Name"
                required
                aria-required="true"
                {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
              >
            </div>

            <!-- Last Name -->
            <div class="v10-form-group v10-form-group--half">
              <label for="RegisterForm-LastName" class="v10-form-label required">
                Last Name
              </label>
              <input
                type="text"
                name="customer[last_name]"
                id="RegisterForm-LastName"
                class="v10-form-input"
                placeholder="Your Last Name"
                required
                aria-required="true"
                {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
              >
            </div>

            <!-- Company Address -->
            <div class="v10-form-group v10-form-group--full">
              <label for="RegisterForm-Address" class="v10-form-label required">
                Company Address
              </label>
              <input
                type="text"
                name="customer[note][address]"
                id="RegisterForm-Address"
                class="v10-form-input"
                placeholder="Your Company Address"
                required
                aria-required="true"
              >
            </div>

            <!-- Address Line 2 -->
            <div class="v10-form-group v10-form-group--half">
              <label for="RegisterForm-AddressLine2" class="v10-form-label">
                Address line 2
              </label>
              <input
                type="text"
                name="customer[note][address_line_2]"
                id="RegisterForm-AddressLine2"
                class="v10-form-input"
                placeholder="Address line 2 (optional)"
              >
            </div>

            <!-- City, State, Postal -->
            <div class="v10-form-group v10-form-group--half">
              <div class="v10-form-row">
                <div class="v10-form-col">
                  <label for="RegisterForm-City" class="v10-form-label">City</label>
                  <input
                    type="text"
                    name="customer[note][city]"
                    id="RegisterForm-City"
                    class="v10-form-input"
                    placeholder="City"
                  >
                </div>
                <div class="v10-form-col">
                  <label for="RegisterForm-State" class="v10-form-label">State</label>
                  <input
                    type="text"
                    name="customer[note][state]"
                    id="RegisterForm-State"
                    class="v10-form-input"
                    placeholder="State"
                  >
                </div>
                <div class="v10-form-col">
                  <label for="RegisterForm-PostalCode" class="v10-form-label">Postal code</label>
                  <input
                    type="text"
                    name="customer[note][postal_code]"
                    id="RegisterForm-PostalCode"
                    class="v10-form-input"
                    placeholder="Postal"
                  >
                </div>
              </div>
            </div>

            <!-- Country -->
            <div class="v10-form-group v10-form-group--full">
              <label for="RegisterForm-Country" class="v10-form-label required">
                Country
              </label>
              <select
                name="customer[note][country]"
                id="RegisterForm-Country"
                class="v10-form-select"
                required
                aria-required="true"
              >
                <option value="">Select a country</option>
                <option value="US">United States</option>
                <option value="CA">Canada</option>
                <option value="GB">United Kingdom</option>
                <option value="PT">Portugal</option>
                <option value="ES">Spain</option>
                <option value="FR">France</option>
                <option value="DE">Germany</option>
                <option value="IT">Italy</option>
                <option value="NL">Netherlands</option>
                <option value="BE">Belgium</option>
                <option value="CH">Switzerland</option>
                <option value="AT">Austria</option>
                <option value="SE">Sweden</option>
                <option value="NO">Norway</option>
                <option value="DK">Denmark</option>
                <option value="FI">Finland</option>
                <option value="AU">Australia</option>
                <option value="NZ">New Zealand</option>
                <option value="JP">Japan</option>
                <option value="CN">China</option>
                <option value="OTHER">Other</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Business Information Section -->
        <div class="v10-form-section">
          <h2 class="v10-section-title">Business Details</h2>
          
          <div class="v10-form-grid">
            <!-- VAT/EIN/SSN Number -->
            <div class="v10-form-group v10-form-group--half">
              <label for="RegisterForm-VatNumber" class="v10-form-label required">
                VAT / EIN / SSN / Business Registration Number
              </label>
              <input
                type="text"
                name="customer[note][vat_number]"
                id="RegisterForm-VatNumber"
                class="v10-form-input"
                placeholder="European businesses must provide a VAT number"
                required
                aria-required="true"
              >
              <span class="v10-form-helper">Non-European businesses must provide an EIN, SSN, or equivalent legal ID</span>
            </div>

            <!-- Phone Number -->
            <div class="v10-form-group v10-form-group--half">
              <label for="RegisterForm-Phone" class="v10-form-label required">
                Phone number
              </label>
              <input
                type="tel"
                name="customer[note][phone]"
                id="RegisterForm-Phone"
                class="v10-form-input"
                placeholder="Your Company or Personal Phone Number"
                required
                aria-required="true"
              >
              <span class="v10-form-helper">Your Company or Personal Phone Number</span>
            </div>

            <!-- Website -->
            <div class="v10-form-group v10-form-group--half">
              <label for="RegisterForm-Website" class="v10-form-label">
                Website
              </label>
              <input
                type="url"
                name="customer[note][website]"
                id="RegisterForm-Website"
                class="v10-form-input"
                placeholder="Include your website for higher chances to being accepted & contacted"
              >
              <span class="v10-form-helper">Include your website for higher chances to being accepted & contacted</span>
            </div>

            <!-- Brand Social Network -->
            <div class="v10-form-group v10-form-group--half">
              <label for="RegisterForm-Social" class="v10-form-label">
                Brand Social Network
              </label>
              <input
                type="text"
                name="customer[note][social_network]"
                id="RegisterForm-Social"
                class="v10-form-input"
                placeholder="Instagram / LinkedIn / Other"
              >
              <span class="v10-form-helper">Your main social @ for networking</span>
            </div>
          </div>
        </div>

        <!-- Terms & Conditions Section -->
        <div class="v10-form-section v10-terms-section">
          <div class="v10-checkbox-wrapper">
            <input
              type="checkbox"
              id="RegisterForm-Terms"
              name="customer[accepts_marketing]"
              class="v10-checkbox"
              required
              aria-required="true"
            >
            <label for="RegisterForm-Terms" class="v10-checkbox-label">
              I agree to the <button type="button" class="v10-terms-link" data-modal="v10-terms-modal">Terms & conditions</button>
            </label>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="v10-form-actions">
          <button type="submit" class="v10-btn v10-btn--primary v10-btn--submit">
            <span>Welcome to Genuineblanks</span>
            <svg class="v10-btn-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M10 0C4.48 0 0 4.48 0 10s4.48 10 10 10 10-4.48 10-10S15.52 0 10 0zm-2 14.5v-9l6 4.5-6 4.5z" fill="currentColor"/>
            </svg>
          </button>
        </div>
      {%- endform -%}
    </div>
  </div>
</div>

<!-- Terms & Conditions Modal -->
{% render 'v10-terms-modal' %}

{% schema %}
{
  "name": "V10 Registration",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "GENUINEBLANKS - Customer Registration"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Join our exclusive network of premium fashion brands and designers"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "V10 Registration"
    }
  ]
}
{% endschema %}
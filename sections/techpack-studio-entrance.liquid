{% comment %}
TechPack-Studio v10 Entrance Page - Complete Isolation
Premium Tesla/Apple minimal design with modal workflow
{% endcomment %}

{{ 'techpack-studio.css' | asset_url | stylesheet_tag }}

<div id="tps-root" data-theme="light">
  
  <!-- Header Section -->
  <header class="tps-header">
    <div class="tps-container">
      <div class="tps-header-content">
        <!-- Wordmark -->
        <div class="tps-wordmark">
          {% if section.settings.wordmark_text != blank %}
            {{ section.settings.wordmark_text }}
          {% else %}
            TechPack-Studio
          {% endif %}
        </div>
        
        <!-- Theme Toggle -->
        <div class="tps-theme-toggle">
          <button type="button" class="tps-theme-btn tps-theme-btn--light tps-theme-btn--active" data-theme="light" aria-label="Switch to light theme">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2"/>
              <path d="m12 2 0 2m0 16 0 2m10-10-2 0M4 12l-2 0m15.66-7.66-1.42 1.42M6.76 17.24l-1.42 1.42m12.72 0-1.42-1.42M6.76 6.76 5.34 5.34" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
          <button type="button" class="tps-theme-btn tps-theme-btn--dark" data-theme="dark" aria-label="Switch to dark theme">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="tps-hero">
    <div class="tps-container">
      <div class="tps-hero-content">
        <h1 class="tps-hero-title">
          {% if section.settings.heading != blank %}
            {{ section.settings.heading }}
          {% else %}
            GARMENT DEVELOPMENT STUDIO
          {% endif %}
        </h1>
        
        <div class="tps-hero-disclaimers">
          {% if section.settings.subtext_line_1 != blank %}
            <p class="tps-hero-disclaimer">{{ section.settings.subtext_line_1 }}</p>
          {% else %}
            <p class="tps-hero-disclaimer">We are a lowkey specialized garment manufacturer for custom brands and intend to make the products specially for each brand.</p>
          {% endif %}
          
          {% if section.settings.subtext_line_2 != blank %}
            <p class="tps-hero-disclaimer">{{ section.settings.subtext_line_2 }}</p>
          {% else %}
            <p class="tps-hero-disclaimer">This is the intent of using our system and our company. If you're looking for fast fashion, we're not the ideal partner for you.</p>
          {% endif %}
        </div>
        
        <div class="tps-hero-actions">
          <button type="button" class="tps-btn-primary" id="tps-access-studio" aria-describedby="tps-access-description">
            {% if section.settings.primary_cta_label != blank %}
              {{ section.settings.primary_cta_label }}
            {% else %}
              ACCESS SPECIALIZED STUDIO
            {% endif %}
          </button>
          <p id="tps-access-description" class="tps-sr-only">Opens client verification modal to begin the studio workflow</p>
          
          {% if section.settings.download_url != blank %}
            <a href="{{ section.settings.download_url }}" class="tps-btn-secondary">
              {% if section.settings.download_label != blank %}
                {{ section.settings.download_label }}
              {% else %}
                Download TechPack Templates
              {% endif %}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>

  <!-- Requirements Section -->
  {% if section.settings.show_requirements_grid %}
  <section class="tps-requirements">
    <div class="tps-container">
      <div class="tps-requirements-header">
        <h2 class="tps-section-title">What You Need to Get Started</h2>
        <p class="tps-section-subtitle">Ensure you have these essentials for a smooth submission process</p>
      </div>
      
      <div class="tps-requirements-grid">
        <div class="tps-requirement-card">
          <div class="tps-requirement-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2"/>
              <polyline points="14,2 14,8 20,8" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="tps-requirement-content">
            <div class="tps-requirement-header">
              <h3 class="tps-requirement-title">TechPack / Design Files</h3>
              <span class="tps-requirement-tag tps-requirement-tag--required">Required</span>
            </div>
            <p class="tps-requirement-description">Upload your design specifications, technical drawings, or concept sketches</p>
            <div class="tps-requirement-formats">PDF, AI, PNG, JPG, ZIP</div>
          </div>
        </div>
        
        <div class="tps-requirement-card">
          <div class="tps-requirement-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
              <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="tps-requirement-content">
            <div class="tps-requirement-header">
              <h3 class="tps-requirement-title">Brand & Company Details</h3>
              <span class="tps-requirement-tag tps-requirement-tag--required">Required</span>
            </div>
            <p class="tps-requirement-description">Your brand name, contact information, and project timeline preferences</p>
            <div class="tps-requirement-formats">Business Registration Preferred</div>
          </div>
        </div>
        
        <div class="tps-requirement-card">
          <div class="tps-requirement-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
              <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2"/>
              <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="tps-requirement-content">
            <div class="tps-requirement-header">
              <h3 class="tps-requirement-title">Reference Materials</h3>
              <span class="tps-requirement-tag tps-requirement-tag--optional">Optional</span>
            </div>
            <p class="tps-requirement-description">Mood boards, fabric preferences, or inspiration images to guide development</p>
            <div class="tps-requirement-formats">Any image format</div>
          </div>
        </div>
        
        <div class="tps-requirement-card">
          <div class="tps-requirement-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 11H5a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" stroke="currentColor" stroke-width="2"/>
              <circle cx="9" cy="9" r="2" stroke="currentColor" stroke-width="2"/>
              <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="tps-requirement-content">
            <div class="tps-requirement-header">
              <h3 class="tps-requirement-title">Production Specifications</h3>
              <span class="tps-requirement-tag tps-requirement-tag--expert">Expert Help</span>
            </div>
            <p class="tps-requirement-description">Detailed manufacturing requirements, sizing charts, and quality standards</p>
            <div class="tps-requirement-formats">Our team can assist</div>
          </div>
        </div>
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Client Verification Modal -->
  <div class="tps-modal-overlay" id="tps-client-modal" aria-hidden="true" role="dialog" aria-labelledby="tps-client-modal-title" aria-describedby="tps-client-modal-desc">
    <div class="tps-modal-content">
      <div class="tps-modal-header">
        <h2 id="tps-client-modal-title" class="tps-modal-title">Client Verification</h2>
        <button type="button" class="tps-modal-close" aria-label="Close modal">&times;</button>
      </div>
      
      <div class="tps-modal-body">
        <h3 class="tps-modal-subtitle">How Genuine Blanks Works</h3>
        
        <div class="tps-process-steps">
          <div class="tps-process-step">
            <div class="tps-process-number">1</div>
            <div class="tps-process-content">
              <h4 class="tps-process-title">Submit Tech Pack</h4>
              <p class="tps-process-description">Upload your design files and specifications through our studio interface</p>
            </div>
          </div>
          
          <div class="tps-process-step">
            <div class="tps-process-number">2</div>
            <div class="tps-process-content">
              <h4 class="tps-process-title">Quote & Approval</h4>
              <p class="tps-process-description">Receive detailed pricing and timeline within 1-5 business days</p>
            </div>
          </div>
          
          <div class="tps-process-step">
            <div class="tps-process-number">3</div>
            <div class="tps-process-content">
              <h4 class="tps-process-title">Sample Production</h4>
              <p class="tps-process-description">We create prototypes for your review and approval</p>
            </div>
          </div>
          
          <div class="tps-process-step">
            <div class="tps-process-number">4</div>
            <div class="tps-process-content">
              <h4 class="tps-process-title">Manufacturing & Delivery</h4>
              <p class="tps-process-description">Full production and delivery to your specifications</p>
            </div>
          </div>
        </div>
        
        <p id="tps-client-modal-desc" class="tps-modal-description">
          Our specialized approach ensures quality garment development tailored to your brand's unique requirements. Each project receives individual attention from our experienced team.
        </p>
        
        <div class="tps-modal-actions">
          <button type="button" class="tps-btn-modal tps-btn-modal--primary" id="tps-registered-client">
            Yes, I'm a Registered Client
          </button>
          <button type="button" class="tps-btn-modal tps-btn-modal--primary" id="tps-new-client">
            No, I'm a New Client
          </button>
        </div>
        
        <p class="tps-modal-disclaimer">VAT only for European countries</p>
      </div>
    </div>
  </div>

  <!-- Submission Type Modal -->
  <div class="tps-modal-overlay" id="tps-submission-modal" aria-hidden="true" role="dialog" aria-labelledby="tps-submission-modal-title">
    <div class="tps-modal-content">
      <div class="tps-modal-header">
        <h2 id="tps-submission-modal-title" class="tps-modal-title">Choose Submission Type</h2>
        <button type="button" class="tps-modal-close" aria-label="Close modal">&times;</button>
      </div>
      
      <div class="tps-modal-body">
        <div id="tps-registration-notice" class="tps-notice tps-notice--info" style="display: none;">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
            <path d="m9 12 2 2 4-4" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>New Client â€“ Registration Required</span>
        </div>
        
        <div class="tps-submission-options">
          <button type="button" class="tps-submission-option" data-type="quotation">
            <div class="tps-submission-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2"/>
                <polyline points="14,2 14,8 20,8" stroke="currentColor" stroke-width="2"/>
                <line x1="16" y1="13" x2="8" y2="13" stroke="currentColor" stroke-width="2"/>
                <line x1="16" y1="17" x2="8" y2="17" stroke="currentColor" stroke-width="2"/>
                <polyline points="10,9 9,9 8,9" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <div class="tps-submission-content">
              <h3 class="tps-submission-title">Garment Quotation</h3>
              <p class="tps-submission-description">Get detailed pricing and timeline for your custom garment project</p>
              <div class="tps-submission-tags">
                <span class="tps-submission-tag">Free Quote</span>
                <span class="tps-submission-tag">1-5 Days</span>
              </div>
            </div>
          </button>
          
          <button type="button" class="tps-submission-option" data-type="sample">
            <div class="tps-submission-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                <circle cx="8.5" cy="8.5" r="1.5" stroke="currentColor" stroke-width="2"/>
                <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <div class="tps-submission-content">
              <h3 class="tps-submission-title">Request Sample</h3>
              <p class="tps-submission-description">Order physical samples or prototypes before full production</p>
              <div class="tps-submission-tags">
                <span class="tps-submission-tag">Physical Sample</span>
                <span class="tps-submission-tag">2-3 Weeks</span>
              </div>
            </div>
            <div class="tps-submission-lock">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="16" r="1" stroke="currentColor" stroke-width="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
          </button>
          
          <button type="button" class="tps-submission-option" data-type="bulk">
            <div class="tps-submission-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" stroke="currentColor" stroke-width="2"/>
                <polyline points="3.27,6.96 12,12.01 20.73,6.96" stroke="currentColor" stroke-width="2"/>
                <line x1="12" y1="22.08" x2="12" y2="12" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <div class="tps-submission-content">
              <h3 class="tps-submission-title">Request Bulk Order</h3>
              <p class="tps-submission-description">Large quantity orders with volume pricing and production timeline</p>
              <div class="tps-submission-tags">
                <span class="tps-submission-tag">Min 75+ Units</span>
                <span class="tps-submission-tag">4-6 Weeks</span>
              </div>
            </div>
            <div class="tps-submission-lock">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="16" r="1" stroke="currentColor" stroke-width="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
          </button>
          
          <button type="button" class="tps-submission-option" data-type="labdips">
            <div class="tps-submission-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2"/>
                <path d="m12 1 0 6m0 6 0 6m11-7-6 0m-6 0-6 0m15.66-7.66-1.42 1.42M6.76 17.24l-1.42 1.42m0-12.72L6.76 6.76m10.48 10.48 1.42 1.42" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <div class="tps-submission-content">
              <h3 class="tps-submission-title">Lab Dips & Brand Accessories</h3>
              <p class="tps-submission-description">Color matching services and custom branded accessories development</p>
              <div class="tps-submission-tags">
                <span class="tps-submission-tag">Color Matching</span>
                <span class="tps-submission-tag">Branding</span>
              </div>
            </div>
            <div class="tps-submission-lock">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="16" r="1" stroke="currentColor" stroke-width="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
          </button>
        </div>
        
        <p class="tps-modal-note">You can change your submission type at any time during the process.</p>
      </div>
    </div>
  </div>

</div>

<script defer type="module" src="{{ 'techpack-studio.js' | asset_url }}"></script>

{% schema %}
{
  "name": "TechPack Studio Entrance",
  "settings": [
    {
      "type": "header",
      "content": "Header Settings"
    },
    {
      "type": "text",
      "id": "wordmark_text",
      "label": "Wordmark Text",
      "default": "TechPack-Studio"
    },
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "GARMENT DEVELOPMENT STUDIO"
    },
    {
      "type": "textarea",
      "id": "subtext_line_1",
      "label": "First Disclaimer Line",
      "default": "We are a lowkey specialized garment manufacturer for custom brands and intend to make the products specially for each brand."
    },
    {
      "type": "textarea",
      "id": "subtext_line_2", 
      "label": "Second Disclaimer Line",
      "default": "This is the intent of using our system and our company. If you're looking for fast fashion, we're not the ideal partner for you."
    },
    {
      "type": "text",
      "id": "primary_cta_label",
      "label": "Primary CTA Button Text",
      "default": "ACCESS SPECIALIZED STUDIO"
    },
    {
      "type": "text",
      "id": "download_label",
      "label": "Download Button Text", 
      "default": "Download TechPack Templates"
    },
    {
      "type": "url",
      "id": "download_url",
      "label": "Download Button URL"
    },
    {
      "type": "header",
      "content": "Requirements Section"
    },
    {
      "type": "checkbox",
      "id": "show_requirements_grid",
      "label": "Show Requirements Grid",
      "default": true
    },
    {
      "type": "header",
      "content": "Theme Settings"
    },
    {
      "type": "select",
      "id": "theme_default",
      "label": "Default Theme (Override)",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark", 
          "label": "Dark"
        },
        {
          "value": "system",
          "label": "System Preference"
        }
      ],
      "default": "light",
      "info": "JavaScript will still force light mode on first load as per requirements"
    }
  ],
  "presets": [
    {
      "name": "TechPack Studio Entrance"
    }
  ]
}
{% endschema %}
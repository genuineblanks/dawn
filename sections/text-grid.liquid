{{ 'text-grid.css' | asset_url | stylesheet_tag }}

<div class="textGrid">
    {% for block in section.blocks %} 
      {%- case block.type -%}
        {%- when 'Add-text-grid' -%}
        <a href="{{ block.settings.link }}">
          <div class="grid">
            <div class="grid__item">
              <h3>{{ block.settings.title | replace: '<br>', ' ' | replace: '\n', ' ' | strip_newlines | strip }}</h3>
            </div>
            <div class="grid__item">
              <h3>{{ block.settings.subtitle | replace: '<br>', ' ' | replace: '\n', ' ' | strip_newlines | strip }}</h3>
            </div>
            <div class="grid__item">
              {%- assign rich_content = block.settings.rich | strip -%}
              {%- unless rich_content contains '1ST -' or rich_content contains '2ND -' or rich_content contains '3RD -' or rich_content contains '4TH -' or rich_content contains '5TH -' or rich_content contains 'REDIRECTS TO' or rich_content contains 'redirects to' -%}
                <div>{{ rich_content | replace: '<br>', ' ' | replace: '\n', ' ' | strip_newlines | strip }}</div>
              {%- endunless -%}
            </div>
          </div>
        </a>
     {%- endcase -%}    
    {% endfor %}
</div>

{% if section.settings.enable_footer == true and template contains 'index' %}

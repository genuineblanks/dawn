<section id="techpack-v10-step-4" class="v10-techpack-step" data-step="4" style="display: none;">
  <div class="techpack-container">
    
    <!-- Compact Progress Steps -->
    <div class="simple-progress-container">
      <div class="simple-progress-steps">
        <div class="simple-step completed">
          <div class="simple-step-circle">1</div>
          <span>Client Info</span>
        </div>
        <div class="simple-step completed">
          <div class="simple-step-circle">2</div>
          <span>Files</span>
        </div>
        <div class="simple-step completed">
          <div class="simple-step-circle">3</div>
          <span>Garments</span>
        </div>
        <div class="simple-step active">
          <div class="simple-step-circle">4</div>
          <span>Review</span>
        </div>
      </div>
    </div>

    <div class="techpack-content">

    <!-- Header -->
    <div class="techpack-header-with-help">
      <div class="techpack-header-content">
        <h2 class="techpack-title">Review & Submit</h2>
        <p class="techpack-subtitle">Verify all details before submitting your request</p>
      </div>
    </div>

    <!-- Client Information & Files - Side by Side -->
    <div class="v10-review-grid">
      <!-- Client Information -->
      <div class="v10-studio-card">
        <div class="v10-studio-header">
          <h3 class="v10-studio-title">Client Information</h3>
          <button type="button" class="v10-edit-btn" data-edit-step="1">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
              <path d="m18.5 2.5 a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
            </svg>
            Edit
          </button>
        </div>
        <div class="v10-review-content" id="review-client-info">
          <!-- Populated by JavaScript -->
        </div>
      </div>

      <!-- Uploaded Files -->
      <div class="v10-studio-card">
        <div class="v10-studio-header">
          <h3 class="v10-studio-title">Uploaded Files</h3>
          <button type="button" class="v10-edit-btn" data-edit-step="2">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
              <path d="m18.5 2.5 a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
            </svg>
            Edit
          </button>
        </div>
        <div class="v10-review-content" id="review-uploaded-files">
          <!-- Populated by JavaScript -->
        </div>
      </div>
    </div>

    <!-- Garment Specifications -->
    <div class="v10-studio-card">
      <div class="v10-studio-header">
        <h3 class="v10-studio-title">Garment Specifications</h3>
        <button type="button" class="v10-edit-btn" data-edit-step="3">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
            <path d="m18.5 2.5 a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
          </svg>
          Edit
        </button>
      </div>
      <div class="v10-review-content" id="review-garments">
        <!-- Populated by JavaScript -->
      </div>
    </div>

    <!-- Fabric Swatches & Design Applications - Side by Side -->
    <div class="v10-review-grid" id="review-samples-section" style="display: none;">
      
      <!-- Fabric Swatches -->
      <div class="v10-studio-card">
        <div class="v10-studio-header">
          <h3 class="v10-studio-title">Fabric Swatches <span class="v10-count-badge" id="labdips-count">0 swatches</span></h3>
          <button type="button" class="v10-edit-btn" data-edit-step="3">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
              <path d="m18.5 2.5 a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
            </svg>
            Edit
          </button>
        </div>
        <div class="v10-review-content">
          <div id="review-labdips-standalone">
            <!-- Populated by JavaScript -->
          </div>
        </div>
      </div>
      
      <!-- Design Applications -->
      <div class="v10-studio-card" id="review-designs-section">
        <div class="v10-studio-header">
          <h3 class="v10-studio-title">Design Applications <span class="v10-count-badge" id="designs-count">0 designs</span></h3>
          <button type="button" class="v10-edit-btn" data-edit-step="3">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
              <path d="m18.5 2.5 a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
            </svg>
            Edit
          </button>
        </div>
        <div class="v10-review-content">
          <div id="review-designs-standalone">
            <!-- Populated by JavaScript -->
          </div>
        </div>
      </div>
      
    </div>

    <!-- Production Quantities (Bulk Orders Only) -->
    <div class="v10-studio-card" id="review-quantities-section" style="display: none;">
      <div class="v10-studio-header">
        <h3 class="v10-studio-title">Production Quantities</h3>
        <button type="button" class="v10-edit-btn" data-edit-step="3">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
            <path d="m18.5 2.5 a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
          </svg>
          Edit
        </button>
      </div>
      <div class="v10-review-content" id="review-quantities">
        <!-- Populated by JavaScript -->
      </div>
    </div>

    <!-- Cost Summary -->
    <div class="v10-studio-card">
      <div class="v10-studio-header">
        <h3 class="v10-studio-title">Cost Summary</h3>
        <!-- Currency Toggle -->
        <div class="currency-toggle">
          <button type="button" class="v10-currency-btn" data-currency="EUR">€</button>
          <button type="button" class="v10-currency-btn" data-currency="USD">$</button>
        </div>
      </div>
      <div class="v10-review-content">
        <div id="cost-breakdown">
          <!-- Populated by JavaScript -->
        </div>
        <div class="v10-total-row">
          <span class="v10-total-label">Total</span>
          <span class="v10-total-amount" id="total-cost">€0</span>
        </div>
      </div>
    </div>
        
        <!-- Submit Message -->
        <div class="v10-submit-card">
          <div class="v10-submit-header">
            <div class="v10-submit-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="22" y1="2" x2="11" y2="13"/>
                <polygon points="22,2 15,22 11,13 2,9 22,2"/>
              </svg>
            </div>
            <div class="v10-submit-info">
              <h3 class="v10-submit-title">Ready to Submit</h3>
              <div class="v10-submit-message" id="submit-message">
                <!-- Populated by JavaScript with request-specific message -->
              </div>
            </div>
          </div>
        </div>

    <!-- Terms & Conditions - Centered -->
    <div class="v10-terms-section">
      <div class="v10-form-field">
        <label class="v10-checkbox-label">
          <input type="checkbox" id="terms-agreement" required>
          <span class="v10-checkbox-text">
            I have reviewed all details and agree to the <a href="#" id="terms-link">Terms & Conditions</a>
          </span>
        </label>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="v10-step-actions">
      <button type="button" class="v10-btn v10-btn--secondary" id="step-4-prev">
        <svg class="v10-btn-icon v10-btn-icon--left" width="16" height="16" viewBox="0 0 16 16">
          <path d="M10 4L6 8l4 4" stroke="currentColor" stroke-width="2" fill="none"/>
        </svg>
        Previous
      </button>
      
      <button type="button" class="v10-btn v10-btn--primary" id="submit-request-btn">
        Submit Request
        <svg class="v10-btn-icon" width="16" height="16" viewBox="0 0 16 16">
          <path d="M6 12l4-4-4-4" stroke="currentColor" stroke-width="2" fill="none"/>
        </svg>
      </button>
    </div>

      </div>

        </div>
      </div>

    </div>
  </div>


  <!-- Success Modal -->
  <div class="v10-modal-overlay" id="success-modal" style="display: none;">
    <div class="v10-modal v10-modal--success">
      <div class="v10-modal-header">
        <div class="v10-modal-icon v10-modal-icon--success">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22,4 12,14.01 9,11.01"/>
          </svg>
        </div>
        <h3 class="v10-modal-title">Request Submitted Successfully!</h3>
        <button type="button" class="v10-modal-close" id="success-close">
          <svg width="20" height="20" viewBox="0 0 20 20">
            <path d="M15 5L5 15M5 5l10 10" stroke="currentColor" stroke-width="2"/>
          </svg>
        </button>
      </div>
      <div class="v10-modal-body">
        <p class="v10-modal-message" id="success-message">
          <!-- Populated by JavaScript -->
        </p>
        <div class="v10-modal-details" id="success-details">
          <!-- Populated by JavaScript -->
        </div>
      </div>
      <div class="v10-modal-actions">
        <button type="button" class="v10-btn v10-btn--primary" id="success-continue">
          Continue
        </button>
      </div>
    </div>
  </div>

</section>


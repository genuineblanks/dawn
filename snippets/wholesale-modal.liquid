{% comment %}
  Wholesale Modal Snippet
  Usage: {% render 'wholesale-modal' %}
  Place this before closing </body> tag
{% endcomment %}

<div 
  id="wholesale-modal" 
  class="wholesale-modal" 
  role="dialog" 
  aria-labelledby="wholesale-modal-title" 
  aria-modal="true"
  aria-hidden="true"
>
  <div class="wholesale-modal-overlay" aria-hidden="true"></div>
  
  <div class="wholesale-modal-content">
    <div class="wholesale-modal-header">
      <h2 id="wholesale-modal-title">Wholesale Inquiry</h2>
      <button 
        type="button" 
        class="wholesale-modal-close" 
        aria-label="Close wholesale inquiry modal"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <form id="wholesale-form" class="wholesale-form" novalidate>
      <!-- Product Info (Hidden) -->
      <input type="hidden" id="product-id" name="product_id">
      <input type="hidden" id="product-title" name="product_title">
      <input type="hidden" id="product-handle" name="product_handle">
      <input type="hidden" id="product-price" name="product_price">

      <!-- Artwork Upload Section -->
      <fieldset class="wholesale-fieldset">
        <legend>Artwork Files (Optional)</legend>
        <div class="wholesale-upload-section">
          <div class="wholesale-upload-item">
            <label for="artwork-1" class="wholesale-file-label">
              <span class="wholesale-file-text">Upload File 1</span>
              <input 
                type="file" 
                id="artwork-1" 
                name="artwork_1" 
                accept=".pdf,.ai,.eps,.png,.jpg,.jpeg"
                class="wholesale-file-input"
              >
            </label>
            <div class="wholesale-file-info" data-target="artwork-1"></div>
          </div>
          
          <div class="wholesale-upload-item">
            <label for="artwork-2" class="wholesale-file-label">
              <span class="wholesale-file-text">Upload File 2</span>
              <input 
                type="file" 
                id="artwork-2" 
                name="artwork_2" 
                accept=".pdf,.ai,.eps,.png,.jpg,.jpeg"
                class="wholesale-file-input"
              >
            </label>
            <div class="wholesale-file-info" data-target="artwork-2"></div>
          </div>
          
          <div class="wholesale-upload-item">
            <label for="artwork-3" class="wholesale-file-label">
              <span class="wholesale-file-text">Upload File 3</span>
              <input 
                type="file" 
                id="artwork-3" 
                name="artwork_3" 
                accept=".pdf,.ai,.eps,.png,.jpg,.jpeg"
                class="wholesale-file-input"
              >
            </label>
            <div class="wholesale-file-info" data-target="artwork-3"></div>
          </div>
        </div>
        <p class="wholesale-upload-note">Accepted formats: PDF, AI, EPS, PNG, JPG. Max 50MB per file.</p>
      </fieldset>

      <!-- Size Quantities Section -->
      <fieldset class="wholesale-fieldset">
        <legend>Quantities by Size *</legend>
        <div class="wholesale-sizes-grid">
          <div class="wholesale-size-item">
            <label for="qty-xxs">XXS</label>
            <input type="number" id="qty-xxs" name="qty_xxs" min="0" value="0">
          </div>
          <div class="wholesale-size-item">
            <label for="qty-xs">XS</label>
            <input type="number" id="qty-xs" name="qty_xs" min="0" value="0">
          </div>
          <div class="wholesale-size-item">
            <label for="qty-s">S</label>
            <input type="number" id="qty-s" name="qty_s" min="0" value="0">
          </div>
          <div class="wholesale-size-item">
            <label for="qty-m">M</label>
            <input type="number" id="qty-m" name="qty_m" min="0" value="0">
          </div>
          <div class="wholesale-size-item">
            <label for="qty-l">L</label>
            <input type="number" id="qty-l" name="qty_l" min="0" value="0">
          </div>
          <div class="wholesale-size-item">
            <label for="qty-xl">XL</label>
            <input type="number" id="qty-xl" name="qty_xl" min="0" value="0">
          </div>
          <div class="wholesale-size-item">
            <label for="qty-xxl">XXL</label>
            <input type="number" id="qty-xxl" name="qty_xxl" min="0" value="0">
          </div>
        </div>
        <div class="wholesale-total-qty">
          Total Quantity: <span id="total-quantity">0</span>
        </div>
      </fieldset>

      <!-- Company Information -->
      <fieldset class="wholesale-fieldset">
        <legend>Company Information *</legend>
        <div class="wholesale-form-row">
          <div class="wholesale-form-group">
            <label for="company-name">Company Name *</label>
            <input type="text" id="company-name" name="company_name" required>
          </div>
          <div class="wholesale-form-group">
            <label for="vat-tax-id">VAT / Tax ID *</label>
            <input type="text" id="vat-tax-id" name="vat_tax_id" required>
          </div>
        </div>
      </fieldset>

      <!-- Contact Information -->
      <fieldset class="wholesale-fieldset">
        <legend>Contact Information *</legend>
        <div class="wholesale-form-row">
          <div class="wholesale-form-group">
            <label for="contact-name">Contact Name *</label>
            <input type="text" id="contact-name" name="contact_name" required>
          </div>
          <div class="wholesale-form-group">
            <label for="contact-email">Email *</label>
            <input type="email" id="contact-email" name="contact_email" required>
          </div>
        </div>
        <div class="wholesale-form-group">
          <label for="contact-country">Country *</label>
          <select id="contact-country" name="contact_country" required>

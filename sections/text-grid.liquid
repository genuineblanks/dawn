  font-family: 'Avenir Next', 'Helvetica Neue', 'Segoe UI', Arial, sans-serif;
  font-weight: 500;
  font-size: 1.3rem;
  line-height: 1.7;
  margin: 0;
  letter-spacing: 0.08em;
  word-wrap: break-word;
  hyphens: auto;

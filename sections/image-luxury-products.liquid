            {% endif %}
          {%- when 'collection' -%}
          {% assign blockProduct =  block.settings.collection %}
            {% if blockProduct != blank %}
            {% assign productObj = collections[blockProduct] %}
              <div class="banner__text products rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                <a href="{{ productObj.url }}" class="premium-product-link">
                  <div class="premium-image-wrapper">
                {{ block.settings.product_image | default: productObj.featured_image | image_url:width:300, height:400 | image_tag: class: 'premium-product-image' }}
                <div class="premium-overlay"></div>
                  </div>
                {% if block.settings.show_title != false %}
                   <h2 class="banner__heading inline-richtext premium-product-title" >
                    {{ productObj.title | truncate: 20 }}
                  </h2>
                {% endif %} 
                  {% if block.settings.show_price != false %}
                    <span class="premium-product-price">{{ productObj.price | money }}</span>
                  {% endif %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  .customer.register {
    display: block !important;
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  /* Account Type Selection Styles */
  .account-type-selection {
    text-align: center;
    margin-bottom: 50px;
  }

  .account-type-selection h1 {
    font-size: 2.5rem;
    margin-bottom: 10px;
    font-weight: 300;
    color: #333;
  }

  .account-type-selection p {
    color: #666;
    margin-bottom: 40px;
    font-size: 1.1rem;
  }

  .account-type-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin: 0;
  }

  .account-type-btn {
    padding: 15px 40px;
    border: 2px solid #333;
    background: white;
    color: #333;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    min-width: 180px;
    border-radius: 0;
  }

  .account-type-btn:hover,
  .account-type-btn.active {
    background: #333;
    color: white;
  }

  /* Form Container */
  .registration-form {
    display: none;
    max-width: 600px;
    margin: 0 auto;
    background: white;
    padding: 40px;
    border: 1px solid #e0e0e0;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }

  .registration-form.active {
    display: block;
  }

  .registration-form h2 {
    text-align: center;
    margin-bottom: 40px;
    font-size: 1.8rem;
    font-weight: 300;
    color: #333;
  }

  /* Form Field Styles */
  .field {
    margin-bottom: 25px;
    position: relative;
  }

  .field input,
  .field select {
    width: 100%;
    height: 50px;
    border: 1px solid #ddd;
    padding: 15px;
    font-size: 14px;
    background: white;
    box-sizing: border-box;
    border-radius: 0;
    transition: border-color 0.3s ease;
  }

  .field input:focus,
  .field select:focus {
    outline: none;
    border-color: #333;
    box-shadow: 0 0 0 1px #333;
  }

  .field label {
    position: absolute;
    top: -8px;
    left: 15px;
    background: white;
    padding: 0 8px;
    font-size: 12px;
    font-weight: 500;
    color: #666;
    z-index: 1;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .field input[type="date"] {
    font-family: inherit;
  }

  /* Wholesale Form Specific Styles */
  .wholesale-form {
    max-width: 800px;
    padding: 50px;
  }

  .wholesale-form .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 25px;
    margin-bottom: 25px;
  }

  .wholesale-form .form-row.full-width {
    grid-template-columns: 1fr;
  }

  .wholesale-form .form-row .field {
    margin-bottom: 0;
  }

  .wholesale-form .section-header {
    margin: 50px 0 30px 0;
    padding-bottom: 15px;
    border-bottom: 2px solid #333;
    text-align: center;
  }

  .wholesale-form .section-header h3 {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 1.2rem;
    font-weight: 600;
    color: #333;
  }

  .wholesale-form .checkbox-field {
    display: flex;
    align-items: center;
    gap: 12px;
    margin: 30px 0;
    justify-content: center;
  }

  .wholesale-form .checkbox-field input[type="checkbox"] {
    width: auto;
    height: auto;
    margin: 0;
  }

  .wholesale-form .checkbox-field label {
    position: static;
    background: none;
    padding: 0;
    font-size: 14px;
    text-transform: none;
    letter-spacing: normal;
    color: #666;
  }

  /* Button Styles */
  .submit-btn,
  .retail-form button {
    width: 100%;
    padding: 18px;
    background: #333;
    color: white;
    border: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    margin-top: 30px;
    transition: background-color 0.3s ease;
    border-radius: 0;
  }

  .submit-btn:hover,
  .retail-form button:hover {
    background: #000;
  }

  /* Required asterisk */
  .required {
    color: #e74c3c;
    font-weight: bold;
  }

  /* Error message styles */
  .error-message {
    color: #e74c3c;
    font-size: 12px;
    margin-top: 8px;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .form__message {
    background: #f8d7da;
    color: #721c24;
    padding: 15px;
    border: 1px solid #f5c6cb;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .form__message svg {
    width: 16px;
    height: 16px;
  }

  .form__message ul {
    margin: 10px 0 0 0;
    padding-left: 20px;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .customer.register {
      padding: 10px;
    }

    .account-type-buttons {
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    .account-type-btn {
      min-width: 250px;
    }

    .registration-form {
      padding: 30px 20px;
    }

    .wholesale-form {
      padding: 30px 20px;
    }

    .wholesale-form .form-row {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .account-type-selection h1 {
      font-size: 2rem;
    }
  }

  @media screen and (max-width: 480px) {
    .account-type-btn {
      min-width: 200px;
      padding: 12px 30px;
    }

    .registration-form {
      padding: 20px 15px;
    }

    .wholesale-form {
      padding: 20px 15px;
    }
  }
{%- endstyle -%}


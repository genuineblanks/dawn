{%- if section.settings.image_height == 'adapt' and section.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before,
      #Banner-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

{%- style -%}
  #Banner-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
{%- endstyle -%}

{%- liquid
  assign full_width = '100vw'
  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'

  if section.settings.image_behavior == 'ambient'
    assign half_width = '60vw'
    assign full_width = '120vw'
    assign stacked_sizes = '(min-width: 750px) 60vw, 120vw'
    assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
  elsif section.settings.image_behavior == 'fixed' or section.settings.image_behavior == 'zoom-in'
    assign half_width = '100vw'
    assign stacked_sizes = '100vw'
  else
    assign half_width = '50vw'
    assign stacked_sizes = '(min-width: 750px) 50vw, 100vw'
  endif
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<div
  id="Banner-{{ section.id }}"
  class="banner product-banner banner--content-align-{{ section.settings.desktop_content_alignment }} banner--content-align-mobile-{{ section.settings.mobile_content_alignment }} banner--{{ section.settings.image_height }}{% if section.settings.stack_images_on_mobile and section.settings.image != blank and section.settings.image_2 != blank %} banner--stacked{% endif %}{% if section.settings.image_height == 'adapt' and section.settings.image != blank %} banner--adapt{% endif %}{% if section.settings.show_text_below %} banner--mobile-bottom{%- endif -%}{% if section.settings.show_text_box == false %} banner--desktop-transparent{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  {%- if section.settings.image != blank -%}
    <div class="banner__media media{% if section.settings.image == blank and section.settings.image_2 == blank %} placeholder{% endif %}{% if section.settings.image_2 != blank %} banner__media-half{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {%- liquid
        assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
        if section.settings.image_2 != blank
          assign image_class = 'banner__media-image-half'
        endif
        if section.settings.image_2 != blank and section.settings.stack_images_on_mobile
          assign sizes = stacked_sizes
        elsif section.settings.image_2 != blank
          assign sizes = half_width
        else
          assign sizes = full_width
        endif
      -%}
      {{
        section.settings.image
        | image_url: width: 3840
        | image_tag:
          width: section.settings.image.width,
          height: image_height,
          class: image_class,
          sizes: sizes,
          widths: widths,
          fetchpriority: fetch_priority
      }}
    </div>
  {%- elsif section.settings.image_2 == blank -%}
    <div class="banner__media media{% if section.settings.image == blank and section.settings.image_2 == blank %} placeholder{% endif %}{% if section.settings.image_2 != blank %} banner__media-half{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {%- endif -%}
  {%- if section.settings.image_2 != blank -%}
    <div class="banner__media media{% if section.settings.image != blank %} banner__media-half{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {%- liquid
        assign image_height_2 = section.settings.image_2.width | divided_by: section.settings.image_2.aspect_ratio
        if section.settings.image != blank
          assign image_class_2 = 'banner__media-image-half'
        endif
        if section.settings.image != blank and section.settings.stack_images_on_mobile
          assign sizes = stacked_sizes
        elsif section.settings.image_2 != blank
          assign sizes = half_width
        else
          assign sizes = full_width
        endif
      -%}
      {{
        section.settings.image_2
        | image_url: width: 3840
        | image_tag:
          width: section.settings.image_2.width,
          height: image_height_2,
          class: image_class_2,
          sizes: sizes,
          widths: widths,
          fetchpriority: fetch_priority
      }}
    </div>
  {%- endif -%}
  {% assign productBlockCount = 0 %}
   {%- for block in section.blocks -%}
    {%- case block.type -%}
     {%- when 'product' -%}
      {% assign productBlockCount = productBlockCount | plus:1 %}
      {%- when 'collection' -%}
      {% assign productBlockCount = productBlockCount | plus:1 %}
     {%- endcase -%}
  {%- endfor -%}
  <div class="{% if productBlockCount != 0 %}product-count-{{ productBlockCount }}{% endif %} banner__content banner__content--{{ section.settings.desktop_content_position }} page-width{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <div class="banner-content">
      {% if section.settings.banner_heading != blank %}
         <h1 class="genuineblanks-logo" >
          {{ section.settings.banner_heading }}
        </h1>
      {% endif %} 

      <div class="collection-toggle-wrapper">
      {% if section.settings.banner_subtext1 != blank %}
        <button class="collection-btn active" data-collection="luxury">{{ section.settings.banner_subtext1 }}</button>
      {% endif %}
      {% if section.settings.banner_subtext2 != blank %}
        <button class="collection-btn" data-collection="relaxed">{{ section.settings.banner_subtext2 }}</button>
      {% endif %}
      </div>

      {% if section.settings.banner_paragraph != blank %}
        <p class="banner-subtitle">{{ section.settings.banner_paragraph }}</p>
      {% endif %}
      
       {%- if section.settings.banner_link_txt != blank -%}
        <a
          {% if section.settings.banner_link_url != blank %}
            href="{{ section.settings.banner_link_url }}"
          {% endif %}
          class="lookbook-link"
        >
          {{- section.settings.banner_link_txt -}}
        </a>
      {%- endif -%}
          <span class="no-minimum">{{ section.settings.banner_botton_text | default: 'NO MINIMUMS' }}</span>
    </div>
    <div class="product-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'product' -%}
          {% assign blockProduct = block.settings.product %}
          {% if blockProduct != blank %}
            {% assign productObj = all_products[blockProduct] %}
            <div class="product-item" {{ block.shopify_attributes }}>
              <a href="{{ productObj.url }}" class="product-link">
                <div class="product-image-container">
                  {% if block.settings.product_image != blank %}
                    {{ block.settings.product_image | image_url: width: 400 | image_tag: class: 'product-image', loading: 'lazy' }}
                  {% else %}
                    {{ productObj.featured_image | image_url: width: 400 | image_tag: class: 'product-image', loading: 'lazy' }}
                  {% endif %}
                </div>
                <div class="product-info">
                  {% if block.settings.show_title != false %}
                    <h3 class="product-title">{{ productObj.title | upcase }}</h3>
                  {% endif %}
                  {% if block.settings.show_price != false %}
                    <span class="product-price">{{ productObj.price | money }}</span>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endif %}
          {%- when 'collection' -%}
          {% assign blockCollection = block.settings.collection %}
          {% if blockCollection != blank %}
            {% assign collectionObj = collections[blockCollection] %}
            <div class="product-item" {{ block.shopify_attributes }}>
              <a href="{{ collectionObj.url }}" class="product-link">
                <div class="product-image-container">
                  {% if block.settings.product_image != blank %}
                    {{ block.settings.product_image | image_url: width: 400 | image_tag: class: 'product-image', loading: 'lazy' }}
                  {% else %}
                    {{ collectionObj.featured_image | image_url: width: 400 | image_tag: class: 'product-image', loading: 'lazy' }}
                  {% endif %}
                </div>
                <div class="product-info">
                  {% if block.settings.show_title != false %}
                    <h3 class="product-title">{{ collectionObj.title | upcase }}</h3>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endif %}
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div class="banner-bottom">
      <p class="banner-cta">CLICK TO GO INTO THE PRODUCT, OR</p>
      <p class="banner-cta-sub">SCROLL DOWN ↓</p>
      <p class="banner-cta-footer">TO GET TO KNOW US BETTER</p>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const collectionBtns = document.querySelectorAll('.collection-btn');
  
  collectionBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      // Remove active class from all buttons
      collectionBtns.forEach(b => b.classList.remove('active'));
      
      // Add active class to clicked button
      this.classList.add('active');
      
      // Add subtle animation to product grid
      const productGrid = document.querySelector('.product-grid');
      if (productGrid) {
        productGrid.style.opacity = '0.8';
        setTimeout(() => {
          productGrid.style.opacity = '1';
        }, 200);
      }
    });
  });
});
</script>

{% style %}
/* GENUINEBLANKS Premium Styling */

/* Main Banner Container */
.banner {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.banner__media {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.banner__media img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0.95) contrast(1.05);
}

.banner__content {
  position: relative;
  z-index: 10;
  max-width: 1200px;
  width: 100%;
  padding: 2rem;
  text-align: center;
}

/* Premium Logo */
.genuineblanks-logo {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  font-size: clamp(2.5rem, 6vw, 4.5rem);
  font-weight: 900;
  letter-spacing: 0.2em;
  color: #1a1a1a;
  margin: 0 0 2rem 0;
  text-transform: uppercase;
  position: relative;
}

.genuineblanks-logo::after {
  content: '';
  position: absolute;
  bottom: -12px;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 2px;
  background: #1a1a1a;
}

/* Collection Toggle Buttons */
.collection-toggle-wrapper {
  display: flex;
  justify-content: center;
  gap: 0;
  margin: 0 0 1.5rem 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50px;
  padding: 4px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.collection-btn {
  padding: 14px 28px;
  border: none;
  background: transparent;
  color: #666;
  font-weight: 600;
  font-size: 13px;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  cursor: pointer;
  border-radius: 50px;
  transition: all 0.3s ease;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  flex: 1;
  max-width: 250px;
}

.collection-btn.active {
  background: #1a1a1a;
  color: #fff;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.15);
}

.collection-btn:hover:not(.active) {
  color: #333;
  background: rgba(0, 0, 0, 0.05);
}

/* Banner Text */
.banner-subtitle {
  font-size: 15px;
  color: #666;
  margin: 0 0 1rem 0;
  font-weight: 400;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.lookbook-link {
  font-size: 13px;
  color: #666;
  text-decoration: underline;
  margin: 0 0 1rem 0;
  display: inline-block;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.no-minimum {
  font-size: 11px;
  color: #999;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  margin: 0 0 3rem 0;
}

/* Product Grid */
.product-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 1.5rem;
  margin: 3rem 0;
  transition: opacity 0.3s ease;
}

.product-item {
  text-align: center;
  transition: transform 0.4s ease, opacity 0.4s ease;
}

.product-item:hover {
  transform: translateY(-5px);
}

.product-link {
  display: block;
  text-decoration: none;
  color: inherit;
}

.product-image-container {
  position: relative;
  margin-bottom: 1rem;
  overflow: hidden;
  border-radius: 8px;
  background: #f8f8f8;
}

.product-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
  transition: transform 0.4s ease;
  filter: brightness(1.02) contrast(1.03);
}

.product-item:hover .product-image {
  transform: scale(1.03);
}

.product-info {
  padding: 0.5rem 0;
}

.product-title {
  font-size: 11px;
  font-weight: 600;
  color: #333;
  margin: 0 0 0.3rem 0;
  letter-spacing: 0.1em;
  line-height: 1.2;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

.product-price {
  font-size: 10px;
  color: #666;
  font-weight: 500;
  letter-spacing: 0.05em;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* Banner Bottom CTA */
.banner-bottom {
  margin-top: 3rem;
  text-align: center;
}

.banner-cta {
  font-size: 12px;
  color: #666;
  margin: 0;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

.banner-cta-sub {
  font-size: 12px;
  color: #999;
  margin: 0.5rem 0;
  letter-spacing: 0.1em;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

.banner-cta-footer {
  font-size: 11px;
  color: #999;
  margin: 0;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .product-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }
}

@media (max-width: 768px) {
  .product-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 0.8rem;
  }
  
  .collection-toggle-wrapper {
    flex-direction: column;
    gap: 0.5rem;
    padding: 8px;
    border-radius: 20px;
  }
  
  .collection-btn {
    padding: 12px 20px;
    font-size: 11px;
    border-radius: 16px;
  }
  
  .product-image {
    height: 150px;
  }
  
  .banner__content {
    padding: 1rem;
  }
}

@media (max-width: 480px) {
  .product-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 0.6rem;
  }
  
  .product-image {
    height: 120px;
  }
  
  .genuineblanks-logo {
    font-size: 2rem;
    letter-spacing: 0.15em;
  }
}

/* Legacy Support */
ul.banner__box {
  display: none;
}


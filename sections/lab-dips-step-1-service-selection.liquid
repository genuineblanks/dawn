<style>
/* Service Selection Specific Styles */
.techpack-service-selection {
  margin: 2rem 0;
}

.techpack-service-options {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.techpack-service-option {
  position: relative;
}

.techpack-service-radio {
  position: absolute;
  opacity: 0;
  pointer-events: none;
}

.techpack-service-card {
  position: relative;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 2px solid transparent;
  min-height: 200px;
}

.techpack-service-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.techpack-service-radio:checked + .techpack-service-card {
  border-color: var(--techpack-primary, #007bff);
  background: linear-gradient(135deg, rgba(0, 123, 255, 0.05), rgba(0, 123, 255, 0.02));
}

.techpack-service-selection-indicator {
  position: absolute;
  top: 1rem;
  right: 1rem;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: white;
  border: 2px solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  opacity: 0;
}

.techpack-service-radio:checked + .techpack-service-card .techpack-service-selection-indicator {
  opacity: 1;
  border-color: var(--techpack-primary, #007bff);
  background: var(--techpack-primary, #007bff);
  color: white;
}

.techpack-service-card__title {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: var(--techpack-text-primary, #2c3e50);
}

.techpack-service-card__description {
  font-size: 0.95rem;
  color: var(--techpack-text-secondary, #6c757d);
  margin-bottom: 1rem;
  line-height: 1.5;
}

.techpack-service-card__features {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.techpack-service-feature {
  font-size: 0.875rem;
  color: var(--techpack-text-tertiary, #8b949e);
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

/* Service Details */
.techpack-service-details {
  margin: 2rem 0;
  animation: fadeIn 0.3s ease;
}

.techpack-info-card {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 1.5rem;
  backdrop-filter: blur(10px);
}

.techpack-info-card__title {
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: var(--techpack-text-primary, #2c3e50);
}

.techpack-info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.techpack-info-item {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
}

.techpack-info-icon {
  font-size: 1.25rem;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 123, 255, 0.1);
  border-radius: 8px;
  flex-shrink: 0;
}

.techpack-info-text h5 {
  font-size: 0.9rem;
  font-weight: 600;
  margin-bottom: 0.25rem;
  color: var(--techpack-text-primary, #2c3e50);
}

.techpack-info-text p {
  font-size: 0.85rem;
  color: var(--techpack-text-secondary, #6c757d);
  line-height: 1.4;
}

/* Mobile Responsiveness */
@media (max-width: 768px) {
  .techpack-service-options {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .techpack-service-card {
    min-height: 160px;
  }
  
  .techpack-info-grid {
    grid-template-columns: 1fr;
  }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const serviceRadios = document.querySelectorAll('.techpack-service-radio');
  const serviceDetails = document.getElementById('service-details');
  const labDipDetails = document.getElementById('lab-dip-details');
  const accessoriesDetails = document.getElementById('brand-accessories-details');
  const continueBtn = document.getElementById('lab-dips-continue-btn');
  
  serviceRadios.forEach(radio => {
    radio.addEventListener('change', function() {
      if (this.checked) {
        // Show service details
        serviceDetails.style.display = 'block';
        
        // Hide all detail sections
        labDipDetails.style.display = 'none';
        accessoriesDetails.style.display = 'none';
        
        // Show relevant detail section
        if (this.value === 'lab-dip-swatches') {
          labDipDetails.style.display = 'block';
        } else if (this.value === 'brand-accessories') {
          accessoriesDetails.style.display = 'block';
        }
        
        // Enable continue button
        continueBtn.disabled = false;
        
        // Store selection for next steps
        if (window.techPackState) {
          window.techPackState.formData.labDipsServiceType = this.value;
        }
      }
    });
  });
  
  // Handle continue button
  continueBtn.addEventListener('click', function() {
    const selectedService = document.querySelector('.techpack-service-radio:checked');
    if (selectedService) {
      // Navigate to appropriate next step based on selection
      if (selectedService.value === 'lab-dip-swatches') {
        // Go directly to lab dip swatches interface (Step 3A)
        window.dispatchEvent(new CustomEvent('techpack:navigateToStep', {
          detail: { step: 'lab-dips-step-3a' }
        }));
      } else if (selectedService.value === 'brand-accessories') {
        // Go to file upload step (Step 2)
        window.dispatchEvent(new CustomEvent('techpack:navigateToStep', {
          detail: { step: 'lab-dips-step-2' }
        }));
      }
    }
  });
  
  // Handle back button
  document.getElementById('lab-dips-back-btn').addEventListener('click', function() {
    // Go back to submission type selection
    window.dispatchEvent(new CustomEvent('techpack:navigateToStep', {
      detail: { step: 'submission-type-selection' }
    }));
  });
});
</script>
<script>
// Terms Modal Functionality
document.addEventListener('DOMContentLoaded', function() {
  const termsModal = document.getElementById('v10-terms-modal');
  const termsAcceptBtn = termsModal?.querySelector('.v10-terms-accept');
  const termsCheckbox = document.getElementById('RegisterForm-Terms');
  
  // Handle accept button
  if (termsAcceptBtn && termsCheckbox) {
    termsAcceptBtn.addEventListener('click', function() {
      // Check the terms checkbox
      termsCheckbox.checked = true;
      
      // Trigger change event for validation
      const changeEvent = new Event('change', { bubbles: true });
      termsCheckbox.dispatchEvent(changeEvent);
      
      // Close modal
      termsModal.classList.remove('show');
      termsModal.style.display = 'none';
      document.body.style.overflow = '';
      
      // Focus back to checkbox
      termsCheckbox.focus();
    });
  }
});
</script>
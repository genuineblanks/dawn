      {%- endfor -%}
    </ul>
    {% if section.settings.banner_botton_text != blank %}
     <div class="banner-bottom premium-bottom-text"> {{ section.settings.banner_botton_text }}</div>
    {% endif %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Enhanced collection button toggle functionality
  const collectionBtns = document.querySelectorAll('.premium-btn');
  
  collectionBtns.forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      
      // Remove active class from all buttons with smooth transition
      collectionBtns.forEach(b => {
        b.classList.remove('active');
        b.style.transform = 'scale(1)';
      });
      
      // Add active class to clicked button with animation
      this.classList.add('active');
      this.style.transform = 'scale(1.02)';
      
      setTimeout(() => {
        this.style.transform = 'scale(1)';
      }, 200);
      
      // Add staggered animation to collection items
      const items = document.querySelectorAll('.premium-item');
      items.forEach((item, index) => {
        item.style.opacity = '0.7';
        item.style.transform = 'translateY(10px)';
        
        setTimeout(() => {
          item.style.opacity = '1';
          item.style.transform = 'translateY(0)';
        }, 100 + (index * 50));
      });
    });
    
    // Add button hover effects
    btn.addEventListener('mouseenter', function() {
      if (!this.classList.contains('active')) {
        this.style.transform = 'translateY(-2px)';
      }
    });
    
    btn.addEventListener('mouseleave', function() {
      if (!this.classList.contains('active')) {
        this.style.transform = 'translateY(0)';
      }
    });
  });
  
  // Enhanced hover effects for products
  const productItems = document.querySelectorAll('.premium-item');
  productItems.forEach(item => {
    item.addEventListener('mouseenter', function() {
      this.style.transform = 'translateY(-15px) scale(1.08)';
      this.style.boxShadow = '0 25px 50px rgba(0, 0, 0, 0.2)';
    });
    
    item.addEventListener('mouseleave', function() {
      this.style.transform = 'translateY(0) scale(1)';
      this.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.08)';
    });
  });
});
</script>


            {%- endif -%}
            <div class="comparison-text">
              <p>{{ section.settings.card5_others_text | default: "They rush orders, follow instructions, and move on. No care for your customer, your resale value, or your long-term vision." }}</p>
            </div>
          </div>
          <div class="split-comparison__side split-comparison__us">
            <span class="split-label">Us</span>
            {%- if section.settings.card5_us_image != blank -%}
              {{ section.settings.card5_us_image | image_url: width: 800 | image_tag: loading: 'lazy' }}

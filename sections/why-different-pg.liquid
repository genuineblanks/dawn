        <div class="why-different-badge">{{ section.settings.card5_badge | default: "Brand-Building Mindset" }}</div>
      </div>
      <div class="why-different-card__visual">
        <div class="split-comparison">
          <div class="split-comparison__side split-comparison__others">
            <span class="split-label">Others</span>
            {%- if section.settings.card5_others_image != blank -%}
              {{ section.settings.card5_others_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- else -%}
              <div class="placeholder-image">Just Orders</div>
            {%- endif -%}
          </div>
          <div class="split-comparison__side split-comparison__us">
            <span class="split-label">Us</span>
            {%- if section.settings.card5_us_image != blank -%}
              {{ section.settings.card5_us_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- else -%}
              <div class="placeholder-image">Brand Building</div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sticky CTA Bar -->
  <div class="why-different-cta-bar" id="sticky-cta">
    <div class="why-different-cta-bar__content">
      <span class="why-different-cta-bar__text">{{ section.settings.cta_text | default: "Ready to build your brand — not just an order?" }}</span>
      <a href="{{ section.settings.cta_url | default: '/pages/tech-pack-submission' }}" class="why-different-cta-bar__button">
        {{ section.settings.cta_button_text | default: "Get Your Custom Quote" }}
      </a>
    </div>
  </div>

  <!-- Progress Indicator -->
  <div class="why-different-progress">
    <div class="why-different-progress__bar"></div>
  </div>

</div>

<script src="{{ 'why-different-interactions.js' | asset_url }}" defer></script>


            {%- else -%}
              <div class="placeholder-image">Dedicated Team</div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Card 4: See it -->
  <section class="why-different-card why-different-card--light" data-card="4">

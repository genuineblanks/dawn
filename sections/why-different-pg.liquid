<div class="why-different-page" id="why-different-{{ section.id }}">
  
  <!-- Intro Section -->
  <section class="why-different-intro" data-card="intro">
    <div class="why-different-intro__content">
      <h1 class="why-different-intro__title">{{ section.settings.intro_title | default: "Why We're Different" }}</h1>
      <p class="why-different-intro__subtitle">{{ section.settings.intro_subtitle | default: "Discover the 5 pillars that set us apart" }}</p>
      <div class="scroll-prompt">
        <span>{{ section.settings.scroll_text | default: "Scroll to explore" }}</span>
        <svg class="scroll-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 5v14M19 12l-7 7-7-7"/>
        </svg>
      </div>
    </div>
    {%- if section.settings.intro_bg_image != blank -%}
      <div class="why-different-intro__bg">
        {{ section.settings.intro_bg_image | image_url: width: 1920 | image_tag: loading: 'eager', fetchpriority: 'high' }}
      </div>
    {%- endif -%}
  </section>

  <!-- Card 1: No leftovers -->
  <section class="why-different-card why-different-card--dark" data-card="1">
    <div class="click-indicator">+</div>
    <div class="why-different-card__content">
      <div class="why-different-card__text">
        <h2 class="why-different-card__headline">{{ section.settings.card1_headline | default: "No leftover fabric. Ever." }}</h2>
        <p class="why-different-card__description">{{ section.settings.card1_description | default: "We create your fabric from zero—spun, dyed, and finished from scratch for your product only, whether it's a heavyweight fleece hoodie or a delicate jersey tee." }}</p>
        <div class="why-different-card__expanded-text">
          {{ section.settings.card1_expanded_text | default: "➡️ <em>Your piece starts fresh. No recycled errors. No 'almost right.' 100% made for you.</em>" }}
        </div>
        <div class="why-different-badge">{{ section.settings.card1_badge | default: "Exclusive Fabric" }}</div>
      </div>
      <div class="why-different-card__visual">
        <div class="split-comparison">
          <div class="split-comparison__side split-comparison__others">
            <span class="split-label">Others</span>
            {%- if section.settings.card1_others_image != blank -%}
              {{ section.settings.card1_others_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- endif -%}
            <div class="comparison-text">
              <p>{{ section.settings.card1_others_text | default: "They buy leftover rolls—cheap stock from fabric warehouses or old batches from other brands. That means your hoodie, tee, or pant might be made with someone else's leftovers." }}</p>
            </div>
          </div>
          <div class="split-comparison__side split-comparison__us">
            <span class="split-label">Us</span>
            {%- if section.settings.card1_us_image != blank -%}
              {{ section.settings.card1_us_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- endif -%}
            <div class="comparison-text">
              <p>{{ section.settings.card1_us_text | default: "We create your fabric from zero—spun, dyed, and finished from scratch for your product only, whether it's a heavyweight fleece hoodie or a delicate jersey tee." }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Card 2: Zero guesswork -->
  <section class="why-different-card why-different-card--light" data-card="2">
    <div class="click-indicator">+</div>
    <div class="why-different-card__content">
      <div class="why-different-card__text">
        <h2 class="why-different-card__headline">{{ section.settings.card2_headline | default: "We test everything. Others roll the dice." }}</h2>
        <p class="why-different-card__description">{{ section.settings.card2_description | default: "Whether it's blanks or a custom design, we stress-test everything first—pre-washing, measuring, dye testing, fit validation." }}</p>
        <div class="why-different-card__expanded-text">
          {{ section.settings.card2_expanded_text | default: "➡️ <em>You avoid disaster. What we make behaves exactly like it should—before you go bulk.</em>" }}
        </div>
        <div class="why-different-badge">{{ section.settings.card2_badge | default: "100% Pre-tested" }}</div>
      </div>
      <div class="why-different-card__visual">
        <div class="split-comparison">
          <div class="split-comparison__side split-comparison__others">
            <span class="split-label">Others</span>
            {%- if section.settings.card2_others_image != blank -%}
              {{ section.settings.card2_others_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- endif -%}
            <div class="comparison-text">
              <p>{{ section.settings.card2_others_text | default: "Most skip critical tests—shrinkage, wash resistance, color stability, or even proper fitting. You only find out something's wrong after 500 pieces are in your hands." }}</p>
            </div>
          </div>
          <div class="split-comparison__side split-comparison__us">
            <span class="split-label">Us</span>
            {%- if section.settings.card2_us_image != blank -%}
              {{ section.settings.card2_us_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- endif -%}
            <div class="comparison-text">
              <p>{{ section.settings.card2_us_text | default: "Whether it's blanks or a custom design, we stress-test everything first—pre-washing, measuring, dye testing, fit validation." }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Card 3: You matter -->
  <section class="why-different-card why-different-card--dark" data-card="3">
    <div class="click-indicator">+</div>
    <div class="why-different-card__content">
      <div class="why-different-card__text">
        <h2 class="why-different-card__headline">{{ section.settings.card3_headline | default: "You're not just a number." }}</h2>
        <p class="why-different-card__description">{{ section.settings.card3_description | default: "We assign you a dedicated team that handles your brand—across blanks or custom products. Same person, same fit, same attention. Every time." }}</p>
        <div class="why-different-card__expanded-text">
          {{ section.settings.card3_expanded_text | default: "➡️ <em>You get consistency, not confusion. Your garments evolve with care, not chaos.</em>" }}
        </div>
        <div class="why-different-badge">{{ section.settings.card3_badge | default: "Named Dedicated Team" }}</div>
      </div>
      <div class="why-different-card__visual">
        <div class="split-comparison">
          <div class="split-comparison__side split-comparison__others">
            <span class="split-label">Others</span>
            {%- if section.settings.card3_others_image != blank -%}
              {{ section.settings.card3_others_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- endif -%}
            <div class="comparison-text">
              <p>{{ section.settings.card3_others_text | default: "Every new order means new people, new errors, forgotten specs. No memory. No connection." }}</p>
            </div>
          </div>
          <div class="split-comparison__side split-comparison__us">
            <span class="split-label">Us</span>
            {%- if section.settings.card3_us_image != blank -%}

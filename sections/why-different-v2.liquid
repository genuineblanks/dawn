{{ 'why-different-v2.css' | asset_url | stylesheet_tag }}

<div class="why-v2-page-wrapper" data-theme="{{ section.settings.color_scheme }}">
  <div class="why-v2-scroll-container">

    {%- comment -%} SECTION 1: HERO / INTRODUCTION {%- endcomment -%}
    <section class="why-v2-section why-v2-hero" id="why-v2-section-1" data-section-index="1">
      <div class="why-v2-section-inner">
        <div class="why-v2-hero-content">
          {% if section.settings.hero_subtitle != blank %}
            <p class="why-v2-hero-subtitle">{{ section.settings.hero_subtitle }}</p>
          {% endif %}

          {% if section.settings.hero_title != blank %}
            <h1 class="why-v2-hero-title">{{ section.settings.hero_title }}</h1>
          {% endif %}

          {% if section.settings.hero_description != blank %}
            <p class="why-v2-hero-description">{{ section.settings.hero_description }}</p>
          {% endif %}

          <div class="why-v2-scroll-indicator">
            <span class="why-v2-scroll-text">Scroll to explore</span>
            <svg class="why-v2-scroll-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 5V19M12 19L19 12M12 19L5 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>

        {% if section.settings.hero_image != blank %}
          <div class="why-v2-hero-background">
            <img src="{{ section.settings.hero_image | image_url: width: 2000 }}"
                 alt="{{ section.settings.hero_title }}"
                 loading="eager"
                 class="why-v2-hero-bg-image">
            <div class="why-v2-hero-overlay"></div>
          </div>
        {% endif %}
      </div>
    </section>

    {%- comment -%} SECTION 2: ABOUT US / MANUFACTURING EXCELLENCE {%- endcomment -%}
    <section class="why-v2-section why-v2-about" id="why-v2-section-2" data-section-index="2">
      {% if section.settings.about_image != blank %}
        <div class="why-v2-section-background">
          <img src="{{ section.settings.about_image | image_url: width: 2000 }}"
               alt="{{ section.settings.about_title }}"
               loading="lazy"
               class="why-v2-bg-image">
          <div class="why-v2-section-overlay"></div>
        </div>
      {% endif %}

      <div class="why-v2-section-inner">
        <div class="why-v2-content-centered-text">
          <div class="why-v2-content-box">
            {% if section.settings.about_badge != blank %}
              <span class="why-v2-badge">{{ section.settings.about_badge }}</span>
            {% endif %}

            {% if section.settings.about_title != blank %}
              <h2 class="why-v2-section-title">{{ section.settings.about_title }}</h2>
            {% endif %}

            {% if section.settings.about_description != blank %}
              <div class="why-v2-section-description">{{ section.settings.about_description }}</div>
            {% endif %}

            <ul class="why-v2-features-list">
              {% if section.settings.about_feature_1 != blank %}
                <li class="why-v2-feature-item">
                  <svg class="why-v2-feature-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path d="M16.6666 5L7.49998 14.1667L3.33331 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{{ section.settings.about_feature_1 }}</span>
                </li>
              {% endif %}

              {% if section.settings.about_feature_2 != blank %}
                <li class="why-v2-feature-item">
                  <svg class="why-v2-feature-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path d="M16.6666 5L7.49998 14.1667L3.33331 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>

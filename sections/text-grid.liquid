<style>
  .text-grid {
    --color-base-text: #1a1a1a;
    --color-base-background-1: #ffffff;
    --color-base-background-2: #f8f8f8;
    --font-body-family: 'Helvetica Neue', Arial, sans-serif;
    --font-heading-family: 'Helvetica Neue', Arial, sans-serif;
    --font-body-weight: 400;
    --font-heading-weight: 600;
    --font-body-scale: 1;
    --media-border-opacity: 0.05;
    --media-border-width: 1px;
    --media-radius: 0px;
    --media-shadow-opacity: 0;
    --media-shadow-horizontal-offset: 0px;
    --media-shadow-vertical-offset: 4px;
    --media-shadow-blur-radius: 5px;
    --color-foreground: var(--color-base-text);
    --gradient-base-background-1: var(--color-base-background-1);
    --gradient-base-background-2: var(--color-base-background-2);
    --animation-ease: cubic-bezier(0.25, 0.46, 0.45, 0.94);
    --animation-duration: 0.3s;
  }

  .textGrid {
    padding: 60px 20px;
    max-width: 1200px;
    margin: 0 auto;
    background: var(--gradient-base-background-1);
  }

  .textGrid .grid {
    display: grid;
    gap: 24px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .textGrid .product-grid {
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 750px) {
    .textGrid .grid--2-col-tablet-down {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .textGrid .grid--3-col-desktop {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .textGrid .grid__item {
    position: relative;
    overflow: hidden;
  }

  .textGrid .grid__item h3 {
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    font-size: calc(1.2rem * var(--font-body-scale));
    line-height: 1.3;
    margin: 0 0 12px 0;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    color: var(--color-foreground);
  }

  .textGrid .grid__item p,
  .textGrid .grid__item div {
    font-family: var(--font-body-family);
    font-weight: var(--font-body-weight);
    font-size: calc(0.9rem * var(--font-body-scale));
    line-height: 1.6;
    margin: 0;
    color: rgba(26, 26, 26, 0.8);
  }

  /* Gradient Button Styling */
  .textGrid a {
    display: block;
    text-decoration: none;
    color: inherit;
    border-radius: 2px;
    padding: 32px 24px;
    transition: all var(--animation-duration) var(--animation-ease);
    position: relative;
    cursor: pointer;
    overflow: hidden;
    border: 1px solid transparent;
    background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  /* Progressive gradient styling for multiple buttons */
  .textGrid a:nth-child(1) {
    background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
    color: #1a1a1a;
  }

  .textGrid a:nth-child(2) {
    background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
    color: #2a2a2a;
  }

  .textGrid a:nth-child(3) {
    background: linear-gradient(135deg, #d8d8d8 0%, #c0c0c0 100%);
    color: #3a3a3a;
  }

  .textGrid a:nth-child(4) {
    background: linear-gradient(135deg, #b8b8b8 0%, #a0a0a0 100%);
    color: #4a4a4a;
  }

  .textGrid a:nth-child(5) {
    background: linear-gradient(135deg, #909090 0%, #787878 100%);
    color: #ffffff;
  }

  .textGrid a:nth-child(6) {
    background: linear-gradient(135deg, #606060 0%, #484848 100%);
    color: #ffffff;
  }

  .textGrid a:nth-child(7) {
    background: linear-gradient(135deg, #404040 0%, #282828 100%);
    color: #ffffff;
  }

  .textGrid a:nth-child(8) {
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
    color: #ffffff;
  }

  .textGrid a:nth-child(9) {
    background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
    color: #ffffff;
  }

  .textGrid a:nth-child(10) {
    background: linear-gradient(135deg, #0a0a0a 0%, #000000 100%);
    color: #ffffff;
  }

  /* Hover animations */
  .textGrid a:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    border-color: rgba(26, 26, 26, 0.1);
  }

  .textGrid a:active {
    transform: translateY(-2px) scale(1.01);
    transition-duration: 0.1s;
  }

  /* Click animation overlay */
  .textGrid a::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
    pointer-events: none;
    z-index: 1;
  }

  .textGrid a.clicked::before {
    width: 300px;
    height: 300px;
  }

  /* Responsive adjustments */
  @media screen and (max-width: 749px) {
    .textGrid {
      padding: 40px 16px;
    }
    
    .textGrid a {
      padding: 24px 20px;
    }
    
    .textGrid .grid__item h3 {
      font-size: calc(1.1rem * var(--font-body-scale));
    }
    
    .textGrid .grid__item p,
    .textGrid .grid__item div {
      font-size: calc(0.85rem * var(--font-body-scale));
    }
  }

  /* Enhanced typography for better readability */
  .textGrid .grid__item h3 {
    font-weight: 600;
    letter-spacing: 0.05em;
  }

  .textGrid .grid__item p strong,
  .textGrid .grid__item div strong {
    font-weight: 600;
    color: var(--color-foreground);
  }

  .textGrid .grid__item p em,
  .textGrid .grid__item div em {
    font-style: italic;
    color: rgba(26, 26, 26, 0.7);
  }

  /* Loading animation for smooth entry */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .textGrid .grid__item {
    animation: fadeInUp 0.6s ease forwards;
  }

  .textGrid .grid__item:nth-child(1) { animation-delay: 0.1s; }
  .textGrid .grid__item:nth-child(2) { animation-delay: 0.2s; }
  .textGrid .grid__item:nth-child(3) { animation-delay: 0.3s; }
  .textGrid .grid__item:nth-child(4) { animation-delay: 0.4s; }
  .textGrid .grid__item:nth-child(5) { animation-delay: 0.5s; }
  .textGrid .grid__item:nth-child(6) { animation-delay: 0.6s; }
  .textGrid .grid__item:nth-child(7) { animation-delay: 0.7s; }
  .textGrid .grid__item:nth-child(8) { animation-delay: 0.8s; }
  .textGrid .grid__item:nth-child(9) { animation-delay: 0.9s; }
  .textGrid .grid__item:nth-child(10) { animation-delay: 1.0s; }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add click animation
  const gridLinks = document.querySelectorAll('.textGrid a');
  
  gridLinks.forEach(link => {
    link.addEventListener('click', function(e) {
      // Add clicked class for ripple effect
      this.classList.add('clicked');
      
      // Remove clicked class after animation
      setTimeout(() => {
        this.classList.remove('clicked');
      }, 600);
    });
    
    // Enhanced hover effects
    link.addEventListener('mouseenter', function() {
      this.style.setProperty('--hover-scale', '1.02');
    });
    
    link.addEventListener('mouseleave', function() {
      this.style.setProperty('--hover-scale', '1');
    });
  });
  
  // Intersection Observer for scroll animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, observerOptions);
  
  // Observe grid items for scroll animations
  const gridItems = document.querySelectorAll('.textGrid .grid__item');
  gridItems.forEach(item => {
    item.style.opacity = '0';
    item.style.transform = 'translateY(30px)';
    item.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
    observer.observe(item);
  });
});
</script>

<div class="textGrid color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding"
     style="margin-top: {{ section.settings.margin_top }}px; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  {% for block in section.blocks %} 
    {%- case block.type -%}
      {%- when 'Add-text-grid' -%}
      <a href="{{ block.settings.link }}" class="text-grid-link" data-block-id="{{ block.id }}">
        <ul class="grid product-grid grid--2-col-tablet-down grid--3-col-desktop">
          <li class="grid__item">
            <h3>{{ block.settings.title }}</h3>
          </li>
          <li class="grid__item">
            <h3>{{ block.settings.subtitle }}</h3>
          </li> 
          <li class="grid__item">
            {{ block.settings.rich }}
          </li>
        </ul>
      </a>
      
      {%- when 'image' -%}
      <div class="text-grid-image-block" style="text-align: {{ block.settings.alignment }};">
        {%- if block.settings.image != blank -%}
          <img src="{{ block.settings.image | image_url: width: block.settings.image_width }}"
               alt="{{ block.settings.image.alt | escape }}"
               width="{{ block.settings.image_width }}"
               height="auto"
               loading="lazy"
               style="max-width: {{ block.settings.image_width }}px; width: 100%; height: auto;">
        {%- endif -%}
        
        {%- if block.settings.title != blank -%}
          <h3 style="margin-top: 20px;">{{ block.settings.title }}</h3>
        {%- endif -%}
        
        {%- if block.settings.richtext != blank -%}
          <div style="margin-top: 12px;">{{ block.settings.richtext }}</div>
        {%- endif -%}
      </div>
   {%- endcase -%}    
  {% endfor %}
</div>


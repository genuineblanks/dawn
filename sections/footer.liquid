<style>
  /* CSS Overrides to neutralize external stylesheet conflicts */
  .footer-redesign .footer__content-top {
    padding-left: 0 !important;
    padding-right: 0 !important;
    padding-bottom: 0 !important;
  }

  .footer-redesign .footer .grid {
    display: grid !important;
  }

  .footer-redesign .footer-main-content {
    display: grid !important;
  }

  .footer-redesign .footer-block--newsletter {
    justify-content: stretch !important;
    align-items: stretch !important;
    margin-top: 0 !important;
  }

  .footer-redesign .newsletter-form {
    align-items: stretch !important;
    justify-content: stretch !important;
    margin: 0 !important;
    max-width: none !important;
  }

  .footer-redesign .footer__content-bottom-wrapper {
    justify-content: center !important;
  }


  /* Ensure grid stays intact on all screen sizes */
  @media screen and (max-width: 749px) {
    .footer-redesign .footer .grid {
      display: grid !important;
    }

    .footer-redesign .footer-main-content {
      display: grid !important;
    }
  }

  /* Custom Footer Styling */
  .footer-redesign {
    background: rgba(var(--color-background), 1);
    padding: 4rem 0 2rem;
  }

  .footer-brand-header {
    text-align: center;
    margin: 0 auto 3rem auto;
    max-width: 1200px;
    width: 100%;
  }

  .footer-brand-title {
    font-size: 3rem;
    font-weight: 700;
    color: rgba(var(--color-foreground), 1);
    letter-spacing: 0.1em;
    margin: 0;
    text-transform: uppercase;
  }

  .footer-brand-subtitle {
    font-size: 1.1rem;
    color: rgba(var(--color-foreground), 0.7);
    margin-top: 0.5rem;
    font-weight: 400;
  }

  .footer-main-content {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    gap: 4rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    align-items: start;
    justify-items: stretch;
  }

  .footer-newsletter-section {
    text-align: center;
    justify-self: center;
  }

  .footer-newsletter-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: rgba(var(--color-foreground), 1);
    margin-bottom: 1rem;
  }

  .footer-newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .footer-email-input {
    height: 50px;
    padding: 0 1rem;
    border: 1px solid rgba(var(--color-foreground), 0.2);
    border-radius: 0;
    font-size: 1rem;
    background: rgba(var(--color-background), 1);
    color: rgba(var(--color-foreground), 1);
  }

  .footer-signup-button {
    height: 50px;
    background: rgba(var(--color-foreground), 1);
    color: rgba(var(--color-background), 1);
    border: none;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .footer-signup-button:hover {
    background: rgba(var(--color-foreground), 0.8);
    transform: translateY(-1px);
  }

  .footer-links-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    text-align: left;
    align-items: flex-start;
    width: 100%;
    justify-self: start;
  }

  .footer-links-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: rgba(var(--color-foreground), 1);
    margin-bottom: 1.5rem;
    letter-spacing: 0.02em;
  }

  .footer-links-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links-list a {
    color: rgba(var(--color-foreground), 0.8);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    transition: all 0.3s ease;
    line-height: 1.8;
    display: block;
    padding: 0.5rem 0;
  }

  .footer-links-list a:hover {
    color: rgba(var(--color-foreground), 1);
    transform: translateX(8px);
    font-weight: 600;
  }

  .footer-payment-social {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    justify-self: end;
  }

  .footer-payment-icons-bottom {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .footer-payment-icons-bottom .icon {
    width: 35px;
    height: 22px;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .footer-payment-icons-bottom .icon:hover {
    opacity: 1;
  }

  .footer-bottom-payment {
    margin: 1rem 0;
  }

  .footer-bottom {
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
    margin-top: 3rem;
    padding-top: 2rem;
    text-align: center;
  }

  .footer-bottom-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .footer-bottom-links a {
    color: rgba(var(--color-foreground), 0.6);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-bottom-links a:hover {
    color: rgba(var(--color-foreground), 1);
  }

  .footer-copyright {
    color: rgba(var(--color-foreground), 0.5);
    font-size: 0.85rem;
  }

  /* Mobile Responsiveness */
  @media screen and (max-width: 768px) {
    .footer-brand-title {
      font-size: 2.2rem;
    }

    .footer-main-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .footer-links-section {
      align-items: center;
      text-align: center;
      justify-self: center;
    }

    .footer-payment-social {
      justify-self: center;
    }

    .footer-links-title {
      font-size: 1.2rem;
    }

    .footer-links-list a {
      font-size: 1rem;
      padding: 0.4rem 0;
    }

    .footer-bottom-links {
      flex-direction: column;
      gap: 1rem;
    }

    .footer-payment-icons-bottom {
      gap: 0.5rem;
    }

    .footer-payment-icons-bottom .icon {
      width: 32px;
      height: 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .footer-redesign {
      padding: 3rem 0 1.5rem;
    }

    .footer-brand-title {
      font-size: 1.8rem;
    }

    .footer-main-content {
      padding: 0 1rem;
      gap: 2rem;
    }
  }
</style>

<footer class="footer footer-redesign color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
      assign has_social_icons = false
    endif

    if settings.brand_image == blank and settings.brand_headline == blank and settings.brand_description == blank
      assign brand_empty = true
    endif

    if section.blocks.size == 1 and section.blocks[0].type == 'brand_information' and brand_empty and has_social_icons == false and section.settings.newsletter_enable == false and section.settings.enable_follow_on_shop == false
      assign only_empty_brand = true
    endif
  -%}
  {%- if section.blocks.size > 0
    or section.settings.newsletter_enable
    or section.settings.show_social and has_social_icons == true
    or section.settings.enable_follow_on_shop
  -%}
    {%- unless only_empty_brand -%}
      <!-- GENUINEBLANKS Header -->
      <div class="footer-brand-header">
        <h1 class="footer-brand-title">GENUINEBLANKS</h1>
        <p class="footer-brand-subtitle">Exclusive deals & insider updates for fashion brands</p>
      </div>

      <!-- Main Footer Content -->
      <div class="footer-main-content">
        <!-- Left Column: Quick Links -->
        <div class="footer-links-section">
          <h3 class="footer-links-title">Quick Links</h3>
          <ul class="footer-links-list">
            <li><a href="/pages/tech-pack-submission">Access our Garment Studio to upload your technical files</a></li>
            <li><a href="/pages/futuristic">Check our factory & showroom</a></li>
            <li><a href="/pages/how-does-it-work">Get Started & FAQ's</a></li>
            <li><a href="/pages/design-services">Design Services - make your ideas a reality with us</a></li>
          </ul>
        </div>

        <!-- Center Column: Newsletter -->
        <div class="footer-newsletter-section">
          {%- if section.settings.newsletter_enable -%}
            <h2 class="footer-newsletter-title">Stay Connected</h2>
            {%- form 'customer', id: 'ContactFooter', class: 'footer-newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="footer-email-input"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                placeholder="Enter your email address"
                required
              >
              <button
                type="submit"
                class="footer-signup-button"
                name="commit"
                id="Subscribe"
                aria-label="Sign up for newsletter"
              >
                {% render 'button-svg' %} SIGN UP
              </button>
              {%- if form.errors -%}
                <small class="form__message" style="color: #ff6b6b; font-size: 0.85rem;">
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
              {%- if form.posted_successfully? -%}
                <small class="form__message" style="color: #4ecdc4; font-size: 0.85rem;">
                  {{- 'newsletter.success' | t }}
                </small>
              {%- endif -%}
            {%- endform -%}
          {%- endif -%}
        </div>

        <!-- Right Column: Social Icons -->
        <div class="footer-payment-social">
          {%- if section.settings.show_social and has_social_icons -%}
            {%- render 'social-icons', class: 'footer__list-social' -%}
          {%- endif -%}
        </div>
      </div>
    {%- endunless -%}
  {%- endif -%}

      <!-- Footer Bottom Section -->
      <div class="footer-bottom">
        <!-- Language/Country Selectors -->
        {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
          <localization-form>
            {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
              <div class="no-js-hidden">
                {%- render 'country-localization', localPosition: 'FooterCountry' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}

        {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
          <localization-form>
            {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
              <div class="no-js-hidden">
                {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}

        <!-- Bottom Links -->
        <div class="footer-bottom-links">
          {% if section.settings.show_policy_menu != blank %}
            {% for menu in section.settings.show_policy_menu.links %}
              <a href="{{ menu.url }}">{{ menu.title }}</a>
            {% endfor %}
          {% endif %}
          {%- if section.settings.show_policy -%}
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <a href="{{ policy.url }}">{{ policy.title }}</a>
              {%- endif -%}
            {%- endfor -%}
          {%- endif -%}
        </div>

        <!-- Payment Icons & Copyright -->
        <div class="footer-bottom-payment">
          {%- if section.settings.payment_enable -%}
            <div class="footer-payment-icons-bottom">
              {% assign enabled_payment_types = 'apple_pay,master,paypal,visa' | remove: ' ' | split: ',' %}
              {% for type in enabled_payment_types %}
                {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>

        <!-- Copyright -->
        <div class="footer-copyright">
          {{ section.settings.copyright_text | default: 'Â© 2025, Genuine Blanks' }}
        </div>
      </div>
</footer>


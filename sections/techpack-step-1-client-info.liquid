{% comment %}
Tech-Pack Pre-Step: Client Registration Check - Premium Design
{% endcomment %}

<link rel="stylesheet" href="{{ 'techpack-unified-styles.css' | asset_url }}?v={{ 'now' | date: '%s' }}">

<section id="techpack-step-0" class="techpack-step" data-step="0" style="display: block;">
  <div class="techpack-entrance-container">
    <!-- Hero Section -->
    <div class="techpack-entrance-hero">
      <div class="techpack-entrance-hero__content">
        <h1 class="techpack-entrance-hero__title">
          Professional TechPack Submission
        </h1>
        <p class="techpack-entrance-hero__subtitle">
          Transform your designs into reality with our expert garment development process
        </p>
      </div>
    </div>

    <!-- Requirements Section -->
    <div class="techpack-entrance-requirements">
      <h2 class="techpack-section-title">What You Need to Get Started</h2>
      <p class="techpack-section-subtitle">Ensure you have these essentials for a smooth submission process</p>
      
      <div class="techpack-requirements-grid">
        <div class="techpack-requirement-card">
          <div class="techpack-requirement-card__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2"/>
              <polyline points="14,2 14,8 20,8" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="techpack-requirement-card__content">
            <h3 class="techpack-requirement-card__title">TechPack / Design Files</h3>
            <p class="techpack-requirement-card__description">Upload your design specifications, technical drawings, or concept sketches</p>
            <div class="techpack-requirement-card__formats">PDF, AI, PNG, JPG, ZIP</div>
          </div>
          <div class="techpack-requirement-card__status">
            <div class="techpack-status-indicator techpack-status-indicator--required">Required</div>
          </div>
        </div>

        <div class="techpack-requirement-card">
          <div class="techpack-requirement-card__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2" stroke="currentColor" stroke-width="2"/>
              <rect x="8" y="2" width="8" height="4" rx="1" ry="1" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="techpack-requirement-card__content">
            <h3 class="techpack-requirement-card__title">Fitting Measurements</h3>
            <p class="techpack-requirement-card__description">Provide body measurements or select from our standard sizing patterns</p>
            <div class="techpack-requirement-card__formats">Size Chart, Custom Measurements</div>
          </div>
          <div class="techpack-requirement-card__status">
            <div class="techpack-status-indicator techpack-status-indicator--optional">Optional*</div>
          </div>
        </div>

        <div class="techpack-requirement-card">
          <div class="techpack-requirement-card__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
              <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2"/>
              <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="techpack-requirement-card__content">
            <h3 class="techpack-requirement-card__title">Design Measurements</h3>
            <p class="techpack-requirement-card__description">Garment dimensions and specifications (our experts can assist if needed)</p>
            <div class="techpack-requirement-card__formats">Spec Sheet, Measurements</div>
          </div>
          <div class="techpack-requirement-card__status">
            <div class="techpack-status-indicator techpack-status-indicator--assisted">Expert Help Available</div>
          </div>
        </div>

        <div class="techpack-requirement-card">
          <div class="techpack-requirement-card__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2"/>
              <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="techpack-requirement-card__content">
            <h3 class="techpack-requirement-card__title">Material Preferences</h3>
            <p class="techpack-requirement-card__description">Fabric types, colors, quality requirements, and special instructions</p>
            <div class="techpack-requirement-card__formats">Fabric Specs, Color Codes</div>
          </div>
          <div class="techpack-requirement-card__status">
            <div class="techpack-status-indicator techpack-status-indicator--optional">Optional</div>
          </div>
        </div>
      </div>

    </div>


    <!-- CTA Section -->
    <div class="techpack-entrance-cta">
      <div class="techpack-cta-content">
        <h2 class="techpack-cta-title">Ready to Start Your TechPack?</h2>
        
        <button type="button" class="techpack-btn-hero" id="open-client-modal">
          <div class="techpack-btn-hero__content">
            <div class="techpack-btn-hero__icon">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <span class="techpack-btn-hero__text">Begin Your TechPack Submission</span>
          </div>
          <div class="techpack-btn-hero__shimmer"></div>
        </button>

      </div>
    </div>
  </div>
</section>

<section id="techpack-step-1" class="techpack-step" data-step="1" style="display: none;">
  <div class="techpack-container">
    <div class="techpack-progress">
      <div class="techpack-progress__bar">
        <div class="techpack-progress__fill" style="width: 50%"></div>
      </div>
      <div class="techpack-progress__steps">
        <div class="techpack-progress__step techpack-progress__step--active">
          <div class="techpack-progress__step-circle techpack-progress__step-circle--active">1</div>
          <div class="techpack-progress__step-label">Client Info</div>
        </div>
        <div class="techpack-progress__step">
          <div class="techpack-progress__step-circle">2</div>
          <div class="techpack-progress__step-label">File Upload</div>
        </div>
        <div class="techpack-progress__step">
          <div class="techpack-progress__step-circle">3</div>
          <div class="techpack-progress__step-label">Garment Details</div>
        </div>
        <div class="techpack-progress__step">
          <div class="techpack-progress__step-circle">4</div>
          <div class="techpack-progress__step-label">Review</div>
        </div>
      </div>
    </div>

    <div class="techpack-content">
      <h2 class="techpack-title">Client Information</h2>
      <p class="techpack-subtitle" id="client-info-subtitle">Please provide your business details</p>

      <form class="techpack-form" autocomplete="off" novalidate>
        <!-- Row 1: Client Name - Company Name -->
        <div class="techpack-form__row">
          <div class="techpack-form__group techpack-form__group--required">
            <label for="client-name" class="techpack-form__label">Contact Name</label>
            <input
              type="text"
              id="client-name"
              name="clientName"
              class="techpack-form__input"
              required
              data-validate="required"
              placeholder="Full name of primary contact"
            >
            <div class="techpack-form__error" role="alert"></div>
          </div>

          <div class="techpack-form__group techpack-form__group--required">
            <label for="company-name" class="techpack-form__label">Business/Brand Name</label>
            <input
              type="text"
              id="company-name"
              name="companyName"
              class="techpack-form__input"
              required
              data-validate="required"
              placeholder="Registered business or brand name"
            >
            <div class="techpack-form__error" role="alert"></div>
          </div>
        </div>

        <!-- Row 2: Email Address - VAT/EIN Number -->
        <div class="techpack-form__row">
          <div class="techpack-form__group techpack-form__group--required">
            <label for="email" class="techpack-form__label">Business Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              class="techpack-form__input"
              required
              data-validate="email"
              placeholder="contact@company.com"
            >
            <div class="techpack-form__error" role="alert"></div>
          </div>

          <div class="techpack-form__group" id="vat-ein-group">
            <label for="vat-ein" class="techpack-form__label" id="vat-ein-label">
              VAT/EIN Number <span class="techpack-form__label-status" id="vat-ein-status">(required for new businesses)</span>
            </label>
            <input
              type="text"
              id="vat-ein"
              name="vatEin"
              class="techpack-form__input"
              data-validate="vat-ein"
              placeholder="VAT: GB123456789 or EIN: 12-3456789"
            >
            <div class="techpack-form__error" role="alert"></div>
            <div class="techpack-form__help" id="vat-ein-help">
              Required to verify your business registration status
            </div>
          </div>
        </div>

        <!-- Row 2.5: Delivery Information (Sample & Bulk only) - JavaScript controlled via #delivery-row -->
        <div id="delivery-row" style="display: none;">
          <!-- For Sample Request: Delivery Address | Production Type -->
          <div class="techpack-form__row techpack-form__row--delivery-sample" id="delivery-row-sample" style="display: none;">
            <!-- Delivery Address (first column) -->
            <div class="techpack-form__group techpack-form__group--required">
              <label class="techpack-form__label">Delivery Address</label>
              <div class="techpack-delivery-options">
                <label class="techpack-delivery-option">
                  <input type="radio" name="deliveryAddress" value="company" checked>
                  <span class="techpack-delivery-option__content">
                    <strong>Company Address</strong>
                    <small>Use business location from above</small>
                  </span>
                </label>
                <label class="techpack-delivery-option">
                  <input type="radio" name="deliveryAddress" value="different">
                  <span class="techpack-delivery-option__content">
                    <strong>Different Address</strong>
                    <small>Specify alternative delivery location</small>
                  </span>
                </label>
              </div>
              <div class="techpack-form__error" role="alert"></div>
            </div>

            <!-- Production Type for Sample Requests (second column) -->
            <div class="techpack-form__group techpack-form__group--required">
              <label class="techpack-form__label">Production Type</label>
              <div class="techpack-production-type-options">
                <label class="techpack-production-type-option">
                  <input type="radio" name="productionType" value="custom-production" required>
                  <span class="techpack-production-type-option__content">
                    <strong>Custom Production</strong>
                    <small>Design and manufacture your unique garments</small>
                  </span>
                </label>
                <label class="techpack-production-type-option">
                  <input type="radio" name="productionType" value="our-blanks" required>
                  <span class="techpack-production-type-option__content">
                    <strong>Our Blanks</strong>
                    <small>Use our existing blank garment styles</small>
                  </span>
                </label>
              </div>
              <div class="techpack-form__error" role="alert"></div>
            </div>
          </div>

          <!-- For Bulk Request: Delivery Address | Production Type (2-column layout) -->
          <div class="techpack-form__row techpack-form__row--delivery-sample" id="delivery-row-bulk" style="display: none;">
            <!-- Delivery Address (first column) -->
            <div class="techpack-form__group techpack-form__group--required">
              <label class="techpack-form__label">Delivery Address</label>
              <div class="techpack-delivery-options">
                <label class="techpack-delivery-option">
                  <input type="radio" name="deliveryAddress" value="company" checked>
                  <span class="techpack-delivery-option__content">
                    <strong>Company Address</strong>
                    <small>Use business location from above</small>
                  </span>
                </label>
                <label class="techpack-delivery-option">
                  <input type="radio" name="deliveryAddress" value="different">
                  <span class="techpack-delivery-option__content">
                    <strong>Different Address</strong>
                    <small>Specify alternative delivery location</small>
                  </span>
                </label>
              </div>
              <div class="techpack-form__error" role="alert"></div>
            </div>

            <!-- Production Type for Bulk Requests (second column) -->
            <div class="techpack-form__group techpack-form__group--required">
              <label class="techpack-form__label">Production Type</label>
              <div class="techpack-production-type-options">
                <label class="techpack-production-type-option">
                  <input type="radio" name="productionTypeBulk" value="custom-production" required>
                  <span class="techpack-production-type-option__content">
                    <strong>Custom Production</strong>
                    <small>Design and manufacture your unique garments</small>
                  </span>
                </label>
                <label class="techpack-production-type-option">
                  <input type="radio" name="productionTypeBulk" value="our-blanks" required>
                  <span class="techpack-production-type-option__content">
                    <strong>Our Blanks</strong>
                    <small>Use our existing blank garment styles</small>
                  </span>
                </label>
              </div>
              <div class="techpack-form__error" role="alert"></div>
            </div>
          </div>
        </div>

        <!-- Row 2.6: Different Address Form (conditional) -->
        <div class="techpack-different-address" id="different-address-form" style="display: none;">
          <!-- Contact Info Row -->
          <div class="techpack-form__row">
            <div class="techpack-form__group techpack-form__group--required">
              <label for="delivery-contact-name" class="techpack-form__label">Contact Name</label>
              <input
                type="text"
                id="delivery-contact-name"
                name="deliveryContactName"
                class="techpack-form__input"
                data-validate="required-if-different"
                placeholder="Full name of contact person"
              >
              <div class="techpack-form__error" role="alert"></div>
            </div>

            <div class="techpack-form__group techpack-form__group--required">
              <label for="delivery-phone" class="techpack-form__label">Contact Phone</label>
              <input
                type="tel"
                id="delivery-phone"
                name="deliveryPhone"
                class="techpack-form__input"
                data-validate="required-if-different"
                placeholder="+1 234 567 8901"
                maxlength="20"
              >
              <div class="techpack-form__error" role="alert"></div>
            </div>
          </div>

          <!-- Address Lines Row -->
          <div class="techpack-form__row">
            <div class="techpack-form__group techpack-form__group--required">
              <label for="delivery-address-1" class="techpack-form__label">Address Line 1</label>
              <input
                type="text"
                id="delivery-address-1"
                name="deliveryAddress1"
                class="techpack-form__input"
                data-validate="required-if-different"
                placeholder="Street address, building, etc."
              >
              <div class="techpack-form__error" role="alert"></div>
            </div>

            <div class="techpack-form__group">
              <label for="delivery-address-2" class="techpack-form__label">
                Address Line 2 <span class="techpack-form__label-status">(optional)</span>
              </label>
              <input
                type="text"
                id="delivery-address-2"
                name="deliveryAddress2"
                class="techpack-form__input"
                placeholder="Apartment, suite, unit, etc."
              >
              <div class="techpack-form__error" role="alert"></div>
            </div>
          </div>

          <!-- City & State Row -->
          <div class="techpack-form__row">
            <div class="techpack-form__group techpack-form__group--required">
              <label for="delivery-city" class="techpack-form__label">City</label>
              <input
                type="text"
                id="delivery-city"
                name="deliveryCity"
                class="techpack-form__input"
                data-validate="required-if-different"
                placeholder="City name"
              >
              <div class="techpack-form__error" role="alert"></div>
            </div>

            <div class="techpack-form__group techpack-form__group--required">
              <label for="delivery-state" class="techpack-form__label">State/Province/Region</label>
              <input
                type="text"
                id="delivery-state"
                name="deliveryState"
                class="techpack-form__input"
                data-validate="required-if-different"
                placeholder="State, province, or region"
              >
              <div class="techpack-form__error" role="alert"></div>
            </div>
          </div>

          <!-- Postal Code & Country Row -->
          <div class="techpack-form__row">
            <div class="techpack-form__group techpack-form__group--required">
              <label for="delivery-postal" class="techpack-form__label">Postal Code</label>
              <input
                type="text"
                id="delivery-postal"
                name="deliveryPostal"
                class="techpack-form__input"
                data-validate="required-if-different"
                placeholder="ZIP or postal code"
              >
              <div class="techpack-form__error" role="alert"></div>
            </div>

            <div class="techpack-form__group techpack-form__group--required">
              <label for="delivery-country" class="techpack-form__label">Country</label>
              <div class="techpack-enhanced-country-wrapper">
                <input
                  type="text"
                  id="delivery-country"
                  name="deliveryCountry"
                  class="techpack-form__input techpack-enhanced-country-input"
                  data-validate="required-if-different"
                  autocomplete="off"
                  placeholder="Select delivery country"
                  readonly
                >
                <div class="techpack-enhanced-country-flag" id="delivery-country-flag"></div>
                <div class="techpack-enhanced-country-toggle" id="delivery-country-toggle">
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                    <path d="M4 6l4 4 4-4H4z"/>
                  </svg>
                </div>
                <div class="techpack-enhanced-country-dropdown" id="delivery-country-dropdown">
                  <div class="techpack-enhanced-country-search">
                    <input
                      type="text"
                      class="techpack-enhanced-country-search-input"
                      placeholder="Search countries..."
                      id="delivery-country-search"
                    >
                  </div>
                  <div class="techpack-enhanced-country-list" id="delivery-country-list"></div>
                </div>
              </div>
              <div class="techpack-form__error" role="alert"></div>
            </div>
          </div>

          <!-- Delivery Notes Row -->
          <div class="techpack-form__row">
            <div class="techpack-form__group techpack-form__group--full">
              <label for="delivery-notes" class="techpack-form__label">
                Delivery Notes <span class="techpack-form__label-status">(optional, max 140 characters)</span>
              </label>
              <textarea
                id="delivery-notes"
                name="deliveryNotes"
                class="techpack-form__textarea"
                rows="3"
                maxlength="140"
                placeholder="Special delivery instructions, gate codes, best delivery times, etc."
              ></textarea>
              <div class="techpack-form__char-count">
                <span id="delivery-notes-count">0</span>/140 characters
              </div>
              <div class="techpack-form__error" role="alert"></div>
            </div>
          </div>
        </div>

        <!-- Row 2.7: Shipping Options (Bulk only) - JavaScript controlled via #shipping-section -->
        <div class="techpack-shipping-section" id="shipping-section" style="display: none;">
          <!-- Shipping Method and Insurance Row (2-column layout) -->
          <div class="techpack-form__row techpack-form__row--shipping-insurance">
            <!-- Shipping Method -->
            <div class="techpack-form__group techpack-form__group--required">
              <label class="techpack-form__label">Preferred Shipping Method</label>
              <div class="techpack-shipping-methods">
                <label class="techpack-shipping-method">
                  <input type="radio" name="shippingMethod" value="air">
                  <span class="techpack-shipping-method__content">
                    <div class="techpack-shipping-method__icon">✈️</div>
                    <div class="techpack-shipping-method__text">
                      <strong>Air Freight</strong>
                      <small>Faster + Expensive</small>
                      <div class="techpack-shipping-method__details">5-10 business days</div>
                    </div>
                  </span>
                </label>
                <label class="techpack-shipping-method">
                  <input type="radio" name="shippingMethod" value="sea">
                  <span class="techpack-shipping-method__content">
                    <div class="techpack-shipping-method__icon">🚢</div>
                    <div class="techpack-shipping-method__text">
                      <strong>Sea Freight</strong>
                      <small>Slower + Cheaper</small>
                      <div class="techpack-shipping-method__details">20-40 business days</div>
                    </div>
                  </span>
                </label>
              </div>
              <div class="techpack-form__error" role="alert"></div>
            </div>

            <!-- Insurance -->
            <div class="techpack-form__group techpack-form__group--required">
              <label class="techpack-form__label">Shipping Insurance</label>
              <div class="techpack-insurance-options">
                <label class="techpack-insurance-option">
                  <input type="radio" name="insurance" value="yes">
                  <span class="techpack-insurance-option__content">
                    <div class="techpack-insurance-option__icon">🛡️</div>
                    <div class="techpack-insurance-option__text">
                      <strong>Yes, add insurance</strong>
                      <small>2-6% of invoice value</small>
                    </div>
                  </span>
                </label>
                <label class="techpack-insurance-option">
                  <input type="radio" name="insurance" value="no">
                  <span class="techpack-insurance-option__content">
                    <div class="techpack-insurance-option__icon">⚠️</div>
                    <div class="techpack-insurance-option__text">
                      <strong>No insurance</strong>
                      <small>No protection coverage</small>
                    </div>
                  </span>
                </label>
              </div>
              <div class="techpack-form__error" role="alert"></div>
            </div>
          </div>

          <!-- Insurance Help Text Row -->
          <div class="techpack-form__row">
            <div class="techpack-form__group techpack-form__group--full">
              <div class="techpack-form__help techpack-form__help--insurance">
                <strong>Insurance covers missing or damaged items</strong> up to full invoice value. 
                Without insurance, there's no protection for lost goods during shipping.
              </div>
            </div>
          </div>
        </div>


        <!-- Row 3: Phone Number - Country -->
        <div class="techpack-form__row">
          <div class="techpack-form__group">
            <label for="phone" class="techpack-form__label">
              Business Phone <span class="techpack-form__label-status">(optional)</span>
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="techpack-form__input"
              placeholder="+1 234 567 8901"
              maxlength="20"
              data-validate="phone"
            >
            <div class="techpack-form__error" role="alert"></div>
          </div>

          <div class="techpack-form__group techpack-form__group--required">
            <label for="country" class="techpack-form__label">Business Location</label>
            <div class="techpack-form__country-wrapper">
              <input
                type="text"
                id="country"
                name="country"
                class="techpack-form__input techpack-form__country-input"
                required
                data-validate="required"
                autocomplete="off"
                placeholder="Country where business is registered"
                readonly
              >
              <div class="techpack-form__country-toggle" id="country-toggle">

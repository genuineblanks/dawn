<!-- Landing Page Section -->
<section id="techpack-v10-landing" class="v10-techpack-landing">
  <div class="v10-techpack-container">
    <!-- Hero Section -->
    <div class="v10-landing-hero">
      <div class="v10-landing-hero-content">
        <h1 class="v10-landing-title">
          Professional TechPack Submission
        </h1>
        <p class="v10-landing-subtitle">
          Transform your designs into reality with our expert garment development process
        </p>
      </div>
    </div>

    <!-- Requirements Section -->
    <div class="v10-requirements-section">
      <h2 class="v10-section-title">What You Need to Get Started</h2>
      <p class="v10-section-subtitle">Ensure you have these essentials for a smooth submission process</p>
      
      <div class="v10-requirements-grid">
        <div class="v10-requirement-card">
          <div class="v10-requirement-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2"/>
              <polyline points="14,2 14,8 20,8" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="v10-requirement-content">
            <h3 class="v10-requirement-title">TechPack / Design Files</h3>
            <p class="v10-requirement-description">Upload your design specifications, technical drawings, or concept sketches</p>
            <div class="v10-requirement-formats">PDF, AI, PNG, JPG, ZIP</div>
          </div>
          <div class="v10-requirement-status">
            <div class="v10-status-badge v10-status-badge--required">Required</div>
          </div>
        </div>

        <div class="v10-requirement-card">
          <div class="v10-requirement-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2" stroke="currentColor" stroke-width="2"/>
              <rect x="8" y="2" width="8" height="4" rx="1" ry="1" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="v10-requirement-content">
            <h3 class="v10-requirement-title">Fitting Measurements</h3>
            <p class="v10-requirement-description">Provide body measurements or select from our standard sizing patterns</p>
            <div class="v10-requirement-formats">Size Chart, Custom Measurements</div>
          </div>
          <div class="v10-requirement-status">
            <div class="v10-status-badge v10-status-badge--optional">Optional*</div>
          </div>
        </div>

        <div class="v10-requirement-card">
          <div class="v10-requirement-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
              <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2"/>
              <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="v10-requirement-content">
            <h3 class="v10-requirement-title">Design Measurements</h3>
            <p class="v10-requirement-description">Garment dimensions and specifications (our experts can assist if needed)</p>
            <div class="v10-requirement-formats">Spec Sheet, Measurements</div>
          </div>
          <div class="v10-requirement-status">
            <div class="v10-status-badge v10-status-badge--assisted">Expert Help Available</div>
          </div>
        </div>

        <div class="v10-requirement-card">
          <div class="v10-requirement-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2"/>

{%- style -%}
  .footer-v2 {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer-v2 {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  /* Footer V2 - Clean Modern Design */
  .footer-v2 {
    background: rgba(var(--color-background), 1);
    color: rgba(var(--color-foreground), 1);
    border-top: 1px solid rgba(var(--color-foreground), 0.08);
  }

  .footer-v2__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Brand Header Section */
  .footer-v2__brand {
    text-align: center;
    padding: 4rem 0 3rem;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.08);
  }

  .footer-v2__brand-title {
    font-size: 2.8rem;
    font-weight: 700;
    color: rgba(var(--color-foreground), 1);
    margin: 0 0 0.5rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .footer-v2__brand-subtitle {
    font-size: 1.1rem;
    color: rgba(var(--color-foreground), 0.7);
    margin: 0;
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Main Content Grid */
  .footer-v2__content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 3rem;
    padding: 3rem 0;
    align-items: start;
  }

  /* Quick Links Section */
  .footer-v2__links {
    grid-column: 1 / 3;
  }

  .footer-v2__heading {
    font-size: 1.3rem;
    font-weight: 600;
    color: rgba(var(--color-foreground), 1);
    margin: 0 0 1.5rem;
    letter-spacing: 0.02em;
  }

  .footer-v2__menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-v2__menu-item {
    margin-bottom: 0.75rem;
  }

  .footer-v2__menu-link {
    color: rgba(var(--color-foreground), 0.8);
    text-decoration: none;
    font-size: 1rem;
    line-height: 1.6;
    transition: all 0.3s ease;
    display: block;
    padding: 0.25rem 0;
  }

  .footer-v2__menu-link:hover {
    color: rgba(var(--color-foreground), 1);
    transform: translateX(4px);
  }

  /* Newsletter Section */
  .footer-v2__newsletter {
    grid-column: 3;
  }

  .footer-v2__newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-v2__email-input {
    height: 48px;
    padding: 0 1rem;
    border: 1px solid rgba(var(--color-foreground), 0.2);
    border-radius: 0;
    font-size: 1rem;
    background: rgba(var(--color-background), 1);
    color: rgba(var(--color-foreground), 1);
    transition: border-color 0.3s ease;
  }

  .footer-v2__email-input:focus {
    border-color: rgba(var(--color-foreground), 0.5);
    outline: none;
  }

  .footer-v2__submit-btn {
    height: 48px;
    background: rgba(var(--color-foreground), 1);
    color: rgba(var(--color-background), 1);
    border: none;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .footer-v2__submit-btn:hover {
    background: rgba(var(--color-foreground), 0.8);
    transform: translateY(-1px);
  }

  .footer-v2__form-message {
    font-size: 0.875rem;
    margin-top: 0.5rem;
  }

  .footer-v2__form-message--success {
    color: #22c55e;
  }

  .footer-v2__form-message--error {
    color: #ef4444;
  }

  /* Social & Payment Section */
  .footer-v2__social-payment {
    grid-column: 4;
    text-align: right;
  }

  .footer-v2__social {
    margin-bottom: 2rem;
  }

  .footer-v2__social-list {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    flex-wrap: wrap;
  }

  .footer-v2__social-item {
    list-style: none;
  }

  .footer-v2__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid rgba(var(--color-foreground), 0.2);
    color: rgba(var(--color-foreground), 0.8);
    transition: all 0.3s ease;
  }

  .footer-v2__social-link:hover {
    border-color: rgba(var(--color-foreground), 0.5);
    color: rgba(var(--color-foreground), 1);
    transform: translateY(-2px);
  }

  .footer-v2__payment {
    display: flex;
    gap: 0.5rem;
    justify-content: flex-end;
    flex-wrap: wrap;
    align-items: center;
  }

  .footer-v2__payment-icon {
    width: 36px;
    height: 24px;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .footer-v2__payment-icon:hover {
    opacity: 1;
  }

  /* Footer Bottom */
  .footer-v2__bottom {
    border-top: 1px solid rgba(var(--color-foreground), 0.08);
    padding: 2rem 0;
    text-align: center;
  }

  .footer-v2__policies {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .footer-v2__policy-link {
    color: rgba(var(--color-foreground), 0.6);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.3s ease;
  }

  .footer-v2__policy-link:hover {
    color: rgba(var(--color-foreground), 1);
  }

  .footer-v2__copyright {
    color: rgba(var(--color-foreground), 0.5);
    font-size: 0.875rem;
    margin: 0;
  }

  /* Responsive Design */
  @media screen and (max-width: 989px) {
    .footer-v2__content {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem;
    }

    .footer-v2__links {
      grid-column: 1 / 2;
    }

    .footer-v2__newsletter {
      grid-column: 2 / 3;
    }

    .footer-v2__social-payment {
      grid-column: 1 / 3;
      text-align: center;
      margin-top: 1rem;
    }

    .footer-v2__social-list {
      justify-content: center;
    }

    .footer-v2__payment {
      justify-content: center;
    }
  }

  @media screen and (max-width: 749px) {
    .footer-v2__container {
      padding: 0 1.5rem;
    }

    .footer-v2__brand {
      padding: 3rem 0 2rem;
    }

    .footer-v2__brand-title {
      font-size: 2.2rem;
    }

    .footer-v2__brand-subtitle {
      font-size: 1rem;
    }

    .footer-v2__content {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem 0;
    }

    .footer-v2__links,
    .footer-v2__newsletter,
    .footer-v2__social-payment {
      grid-column: 1;
      text-align: center;
    }

    .footer-v2__heading {
      font-size: 1.2rem;
    }

    .footer-v2__menu-link {
      font-size: 0.95rem;
    }

    .footer-v2__policies {
      flex-direction: column;
      gap: 1rem;
    }

    .footer-v2__social-list {
      justify-content: center;
      gap: 0.75rem;
    }

    .footer-v2__payment {
      justify-content: center;
      gap: 0.75rem;
    }
  }

  @media screen and (max-width: 480px) {
    .footer-v2__container {
      padding: 0 1rem;
    }

    .footer-v2__brand {
      padding: 2rem 0 1.5rem;
    }

    .footer-v2__brand-title {
      font-size: 1.8rem;
    }

    .footer-v2__content {
      gap: 1.5rem;
      padding: 1.5rem 0;
    }

    .footer-v2__bottom {
      padding: 1.5rem 0;
    }
  }
</style>

<footer class="footer-v2 color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {%- liquid
    assign has_social_icons = false
    if settings.social_facebook_link != blank or settings.social_instagram_link != blank or settings.social_youtube_link != blank or settings.social_tiktok_link != blank or settings.social_twitter_link != blank or settings.social_pinterest_link != blank or settings.social_snapchat_link != blank or settings.social_tumblr_link != blank or settings.social_vimeo_link != blank
      assign has_social_icons = true
    endif
  -%}

  <div class="footer-v2__container">
    <!-- Brand Header -->
    <div class="footer-v2__brand">
      <h1 class="footer-v2__brand-title">{{ section.settings.brand_title | default: 'GENUINEBLANKS' }}</h1>
      <p class="footer-v2__brand-subtitle">{{ section.settings.brand_subtitle | default: 'Exclusive deals & insider updates for fashion brands' }}</p>
    </div>

    <!-- Main Content -->
    <div class="footer-v2__content">
      <!-- Quick Links -->
      <div class="footer-v2__links">
        <h3 class="footer-v2__heading">{{ section.settings.links_heading | default: 'Quick Links' }}</h3>
        {%- if section.settings.footer_menu != blank -%}
          <ul class="footer-v2__menu">
            {%- for link in section.settings.footer_menu.links -%}
              <li class="footer-v2__menu-item">
                <a href="{{ link.url }}" class="footer-v2__menu-link">{{ link.title }}</a>
              </li>
            {%- endfor -%}
          </ul>
        {%- else -%}
          <ul class="footer-v2__menu">
            <li class="footer-v2__menu-item">
              <a href="/pages/tech-pack-submission" class="footer-v2__menu-link">Access our Garment Studio to upload your technical files</a>
            </li>
            <li class="footer-v2__menu-item">
              <a href="/pages/futuristic" class="footer-v2__menu-link">Check our factory & showroom</a>
            </li>
            <li class="footer-v2__menu-item">
              <a href="/pages/how-does-it-work" class="footer-v2__menu-link">Get Started & FAQ's</a>
            </li>
            <li class="footer-v2__menu-item">
              <a href="/pages/design-services" class="footer-v2__menu-link">Design Services - make your ideas a reality with us</a>
            </li>
          </ul>
        {%- endif -%}
      </div>

      <!-- Newsletter -->
      {%- if section.settings.newsletter_enable -%}
        <div class="footer-v2__newsletter">
          <h3 class="footer-v2__heading">{{ section.settings.newsletter_heading | default: 'Stay Connected' }}</h3>
          {%- form 'customer', id: 'ContactFooter', class: 'footer-v2__newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="footer-v2__email-input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              placeholder="{{ section.settings.newsletter_placeholder | default: 'Enter your email address' }}"
              required
            >
            <button
              type="submit"
              class="footer-v2__submit-btn"
              name="commit"
              id="Subscribe"
              aria-label="{{ section.settings.newsletter_button | default: 'Subscribe' }}"
            >
              {{ section.settings.newsletter_button | default: 'SIGN UP' }}
            </button>
            {%- if form.errors -%}
              <div class="footer-v2__form-message footer-v2__form-message--error">
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </div>
            {%- endif -%}
            {%- if form.posted_successfully? -%}
              <div class="footer-v2__form-message footer-v2__form-message--success">
                {{- 'newsletter.success' | t }}
              </div>
            {%- endif -%}
          {%- endform -%}
        </div>
      {%- endif -%}

      <!-- Social & Payment -->
      <div class="footer-v2__social-payment">
        {%- if section.settings.show_social and has_social_icons -%}
          <div class="footer-v2__social">
            <h3 class="footer-v2__heading">Follow Us</h3>
            {%- render 'social-icons', class: 'footer-v2__social-list' -%}
          </div>
        {%- endif -%}

        {%- if section.settings.payment_enable -%}
          <div class="footer-v2__payment">
            {%- assign enabled_payment_types = 'apple_pay,master,paypal,visa' | remove: ' ' | split: ',' -%}
            {%- for type in enabled_payment_types -%}
              {{ type | payment_type_svg_tag: class: 'footer-v2__payment-icon' }}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-v2__bottom">
      <!-- Policies -->
      {%- if section.settings.show_policy or section.settings.policy_menu != blank -%}
        <div class="footer-v2__policies">
          {%- if section.settings.policy_menu != blank -%}
            {%- for link in section.settings.policy_menu.links -%}
              <a href="{{ link.url }}" class="footer-v2__policy-link">{{ link.title }}</a>
            {%- endfor -%}
          {%- endif -%}
          {%- if section.settings.show_policy -%}
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <a href="{{ policy.url }}" class="footer-v2__policy-link">{{ policy.title }}</a>
              {%- endif -%}
            {%- endfor -%}
          {%- endif -%}
        </div>
      {%- endif -%}

      <!-- Copyright -->
      <p class="footer-v2__copyright">
        {{ section.settings.copyright_text | default: '© 2025, Genuine Blanks. All rights reserved.' }}
      </p>
    </div>
  </div>
</footer>


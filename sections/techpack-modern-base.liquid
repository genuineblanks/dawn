{{ 'techpack-modern.css' | asset_url | stylesheet_tag }}

<div class="techpack-modern" data-section-id="{{ section.id }}">
  <!-- Header Section -->
  <header class="techpack-modern__header">
    <div class="container">
      <h1 class="techpack-modern__title">{{ section.settings.title }}</h1>
      <p class="techpack-modern__subtitle">{{ section.settings.subtitle }}</p>
    </div>
  </header>

  {% if section.settings.show_progress %}
    <!-- Progress Indicator -->
    <div class="techpack-modern__progress-container">
      <div class="container">
        <div class="techpack-modern__progress">
          <div class="techpack-modern__progress-step techpack-modern__progress-step--active" data-step="1">
            <span class="techpack-modern__progress-number">1</span>
            <span class="techpack-modern__progress-label">Client Info</span>
          </div>
          <div class="techpack-modern__progress-step" data-step="2">
            <span class="techpack-modern__progress-number">2</span>
            <span class="techpack-modern__progress-label">File Upload</span>
          </div>
          <div class="techpack-modern__progress-step" data-step="3">
            <span class="techpack-modern__progress-number">3</span>
            <span class="techpack-modern__progress-label">Garment Specs</span>
          </div>
          <div class="techpack-modern__progress-step" data-step="4">
            <span class="techpack-modern__progress-number">4</span>
            <span class="techpack-modern__progress-label">Review & Submit</span>
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  <!-- Main Content -->
  <main class="techpack-modern__main">
    <div class="container">
      <!-- Step 1: Client Info -->
      <section class="techpack-modern__step techpack-modern__step--active" data-step="1">
        <div class="techpack-modern__step-header">
          <h2 class="techpack-modern__step-title">Client Information</h2>
          <p class="techpack-modern__step-description">Tell us about your project requirements</p>
        </div>
        <div class="techpack-modern__step-content">
          <div class="techpack-modern__placeholder">
            Step 1 content will be added in Phase 2
          </div>
        </div>
      </section>

      <!-- Step 2: File Upload -->
      <section class="techpack-modern__step" data-step="2">
        <div class="techpack-modern__step-header">
          <h2 class="techpack-modern__step-title">File Upload</h2>
          <p class="techpack-modern__step-description">Upload your design files and references</p>
        </div>
        <div class="techpack-modern__step-content">
          <div class="techpack-modern__placeholder">
            Step 2 content will be added in Phase 3
          </div>
        </div>
      </section>

      <!-- Step 3: Garment Specs -->
      <section class="techpack-modern__step" data-step="3">
        <div class="techpack-modern__step-header">
          <h2 class="techpack-modern__step-title">Garment Specifications</h2>
          <p class="techpack-modern__step-description">Define your garment details and quantities</p>
        </div>
        <div class="techpack-modern__step-content">
          <div class="techpack-modern__placeholder">
            Step 3 content will be added in Phase 4
          </div>
        </div>
      </section>

      <!-- Step 4: Review & Submit -->
      <section class="techpack-modern__step" data-step="4">
        <div class="techpack-modern__step-header">
          <h2 class="techpack-modern__step-title">Review & Submit</h2>
          <p class="techpack-modern__step-description">Review your submission and send your tech pack</p>
        </div>
        <div class="techpack-modern__step-content">
          <div class="techpack-modern__placeholder">
            Step 4 content will be added in Phase 5
          </div>
        </div>
      </section>
    </div>
  </main>

  <!-- Navigation -->
  <nav class="techpack-modern__navigation">
    <div class="container">
      <button class="techpack-modern__btn techpack-modern__btn--secondary" id="techpack-prev-btn" disabled>
        Previous
      </button>
      <button class="techpack-modern__btn techpack-modern__btn--primary" id="techpack-next-btn">
        Next
      </button>
    </div>
  </nav>
</div>

<script src="{{ 'techpack-modern.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Techpack Modern",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Tech Pack Submission"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Professional garment development made simple"
    },
    {
      "type": "checkbox",
      "id": "show_progress",
      "label": "Show Progress Indicator",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_animations",
      "label": "Enable Animations",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Techpack Modern",
      "category": "Custom"
    }
  ]
}
{% endschema %}
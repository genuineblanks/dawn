}

.techpack-toggle-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.02);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 1.5rem;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.techpack-toggle-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

.techpack-toggle-radio:checked + .techpack-toggle-card {
  border-color: var(--techpack-primary, #007bff);
  background: linear-gradient(135deg, rgba(0, 123, 255, 0.1), rgba(0, 123, 255, 0.05));
}

.techpack-toggle-card__content {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.techpack-toggle-card__icon {
  font-size: 2rem;
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
}

.techpack-toggle-card__text h4 {
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 0.25rem;
  color: var(--techpack-text-primary, #2c3e50);
}

.techpack-toggle-card__text p {
  font-size: 0.9rem;
  color: var(--techpack-text-secondary, #6c757d);
  margin-bottom: 0.25rem;
}

.techpack-toggle-card__price {
  font-size: 0.8rem;
  color: var(--techpack-text-tertiary, #8b949e);
}

.techpack-toggle-selection-indicator {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  border: 2px solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  opacity: 0.3;
}

.techpack-toggle-radio:checked + .techpack-toggle-card .techpack-toggle-selection-indicator {
  border-color: var(--techpack-primary, #007bff);
  background: var(--techpack-primary, #007bff);
  color: white;
  opacity: 1;
}

/* Accessories Catalog */
.techpack-accessories-catalog {
  margin: 2rem 0;
}

.techpack-accessories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 1.5rem;
  margin-top: 1.5rem;
}

.techpack-accessory-card {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 1.5rem;
  transition: all 0.3s ease;
}

.techpack-accessory-card--selected {
  border-color: var(--techpack-primary, #007bff);
  background: linear-gradient(135deg, rgba(0, 123, 255, 0.05), rgba(0, 123, 255, 0.02));
}

.techpack-accessory-header {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  margin-bottom: 1rem;
}

.techpack-accessory-icon {
  font-size: 1.5rem;
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.techpack-accessory-info {
  flex: 1;
}

.techpack-accessory-title {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.25rem;
  color: var(--techpack-text-primary, #2c3e50);
}

.techpack-accessory-description {
  font-size: 0.85rem;
  color: var(--techpack-text-secondary, #6c757d);
  margin-bottom: 0.5rem;
}

.techpack-accessory-minimum {
  font-size: 0.75rem;
  color: var(--techpack-primary, #007bff);
  font-weight: 500;
}

/* Toggle Switch */
.techpack-toggle-switch {
  position: relative;
  display: inline-block;
  width: 50px;
  height: 28px;
}

.techpack-toggle-switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

.techpack-toggle-slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ccc;
  transition: .4s;
  border-radius: 34px;
}

.techpack-toggle-slider:before {
  position: absolute;
  content: "";

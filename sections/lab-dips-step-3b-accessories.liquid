<script>
document.addEventListener('DOMContentLoaded', function() {
  // Elements
  const orderTypeRadios = document.querySelectorAll('input[name="order-type"]');
  const accessoriesCatalog = document.getElementById('accessories-catalog');
  const accessoryCards = document.querySelectorAll('.techpack-accessory-card');
  const accessoriesSummary = document.getElementById('accessories-summary');
  const summaryContent = document.getElementById('summary-content');
  const orderTypeDisplay = document.getElementById('order-type-display');
  const totalItems = document.getElementById('total-items');
  const submitOrderBtn = document.getElementById('submit-accessories-order-btn');
  const backBtn = document.getElementById('accessories-back-btn');
  
  let selectedOrderType = '';
  let selectedAccessories = {};
  
  // Minimum quantities by accessory type for bulk orders
  const minimumQuantities = {
    'neck-label': 500,
    'hang-tag': 500,
    'zippers': 500,
    'side-tag-label': 500,
    'cardbox': 200,
    'wash-care-label': 500,
    'frosted-bag': 1000
  };

  // Order type selection
  orderTypeRadios.forEach(radio => {
    radio.addEventListener('change', function() {
      if (this.checked) {
        selectedOrderType = this.value;
        accessoriesCatalog.style.display = 'block';
        updateMinimumDisplays();
        updateQuantityInputs();
        updateOrderSummary();
      }
    });
  });

  function updateMinimumDisplays() {
    accessoryCards.forEach(card => {
      const minimumDiv = card.querySelector('.techpack-accessory-minimum');
      if (selectedOrderType === 'bulk') {
        minimumDiv.style.display = 'block';
      } else {
        minimumDiv.style.display = 'none';
      }
    });
  }

  function updateQuantityInputs() {
    accessoryCards.forEach(card => {
      const quantityInput = card.querySelector('.techpack-quantity-input');
      const accessoryType = card.dataset.accessory;
      
      if (selectedOrderType === 'sample') {
        quantityInput.value = 1;
        quantityInput.setAttribute('readonly', true);
      } else {
        quantityInput.removeAttribute('readonly');
        const minimum = minimumQuantities[accessoryType] || 1;
        quantityInput.min = minimum;
        if (parseInt(quantityInput.value) < minimum) {
          quantityInput.value = minimum;
        }
      }
    });
  }

  // Accessory selection
  accessoryCards.forEach(card => {
    const checkbox = card.querySelector('.techpack-accessory-checkbox');
    const options = card.querySelector('.techpack-accessory-options');
    const accessoryType = card.dataset.accessory;
    
    checkbox.addEventListener('change', function() {
      if (this.checked) {
        options.style.display = 'block';
        card.classList.add('techpack-accessory-card--selected');
        
        // Initialize accessory data
        selectedAccessories[accessoryType] = {
          name: card.querySelector('.techpack-accessory-title').textContent,
          material: '',
          color: '#000000',
          colorName: 'Black',
          quantity: selectedOrderType === 'sample' ? 1 : (minimumQuantities[accessoryType] || 1)
        };
        
        // Set up option listeners
        setupAccessoryOptionListeners(card, accessoryType);
        
      } else {
        options.style.display = 'none';
        card.classList.remove('techpack-accessory-card--selected');
        delete selectedAccessories[accessoryType];
      }
      
      updateOrderSummary();
    });
  });

  function setupAccessoryOptionListeners(card, accessoryType) {
    const materialSelect = card.querySelector('[data-option="material"]');
    const colorInput = card.querySelector('[data-option="color"]');
    const colorLabel = card.querySelector('.techpack-color-label');
    const quantityInput = card.querySelector('[data-option="quantity"]');
    
    materialSelect.addEventListener('change', function() {
      selectedAccessories[accessoryType].material = this.value;
      updateOrderSummary();
    });
    
    colorInput.addEventListener('input', function() {
      const color = this.value;
      selectedAccessories[accessoryType].color = color;
      selectedAccessories[accessoryType].colorName = getColorName(color);
      colorLabel.textContent = selectedAccessories[accessoryType].colorName;
      updateOrderSummary();
    });
    
    quantityInput.addEventListener('input', function() {
      let quantity = parseInt(this.value) || 1;
      
      // Enforce minimums for bulk orders
      if (selectedOrderType === 'bulk') {
        const minimum = minimumQuantities[accessoryType] || 1;
        if (quantity < minimum) {
          quantity = minimum;
          this.value = minimum;
        }
      } else {
        quantity = 1;
        this.value = 1;
      }
      
      selectedAccessories[accessoryType].quantity = quantity;
      updateOrderSummary();
    });
  }

  function getColorName(hex) {
    // Simple color name mapping
    const colorNames = {
      '#000000': 'Black',
      '#ffffff': 'White',
      '#c0c0c0': 'Silver',
      '#d4af37': 'Kraft',
      '#f0f0f0': 'Frosted Clear'
    };
    return colorNames[hex.toLowerCase()] || hex;
  }

  function updateOrderSummary() {
    const accessoryCount = Object.keys(selectedAccessories).length;
    
    if (accessoryCount === 0) {
      accessoriesSummary.style.display = 'none';
      submitOrderBtn.disabled = true;
      return;
    }
    
    accessoriesSummary.style.display = 'block';
    submitOrderBtn.disabled = false;
    
    // Update order type display
    orderTypeDisplay.textContent = selectedOrderType === 'sample' ? 'Sample Order' : 'Bulk Order';
    
    // Generate summary content
    let summaryHTML = '';
    let totalItemCount = 0;
    
    Object.entries(selectedAccessories).forEach(([type, data]) => {
      totalItemCount += data.quantity;
      summaryHTML += `
        <div class="techpack-summary-item">
          <div class="techpack-summary-item-info">
            <h5>${data.name}</h5>
            <p>${data.material || 'Material not selected'} ‚Ä¢ ${data.colorName}</p>
          </div>
          <div class="techpack-summary-item-quantity">${data.quantity}</div>
        </div>
      `;
    });
    
    summaryContent.innerHTML = summaryHTML;
    totalItems.textContent = totalItemCount;
  }

  // Navigation
  backBtn.addEventListener('click', function() {
    window.dispatchEvent(new CustomEvent('techpack:navigateToStep', {
      detail: { step: 'lab-dips-step-2' }
    }));
  });

  submitOrderBtn.addEventListener('click', function() {
    if (Object.keys(selectedAccessories).length === 0) return;
    
    // Store order data
    if (window.techPackState) {
      window.techPackState.formData.brandAccessories = {
        orderType: selectedOrderType,
        accessories: selectedAccessories
      };
    }
    
    // Generate summary for confirmation
    const accessoryNames = Object.values(selectedAccessories).map(a => a.name).join(', ');
    const totalItemCount = Object.values(selectedAccessories).reduce((sum, a) => sum + a.quantity, 0);
    
    alert(`Brand Accessories Order Submitted!\n\nOrder Type: ${selectedOrderType === 'sample' ? 'Sample' : 'Bulk'}\nAccessories: ${accessoryNames}\nTotal Items: ${totalItemCount}\n\nYou will receive a quote and delivery estimate via email shortly.`);
    
    // Navigate back to submission type or reset workflow
    window.dispatchEvent(new CustomEvent('techpack:navigateToStep', {
      detail: { step: 'submission-type-selection' }
    }));
  });
});
</script>
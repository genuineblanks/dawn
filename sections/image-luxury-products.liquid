{% style %}
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');

/* Premium Logo Styling */
.genuineblanks-logo {
  font-family: 'Inter', sans-serif;
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 900;
  letter-spacing: 0.15em;
  color: #1a1a1a;
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 50%, #000 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
  text-align: center;
}

.genuineblanks-logo::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 60px;
  height: 2px;
  background: linear-gradient(90deg, transparent 0%, #000 50%, transparent 100%);
}

.banner-subtitle {
  font-size: 1.1rem;
  color: #666;
  margin-bottom: 2rem;
  font-weight: 400;
  text-align: center;
}

/* Collection Toggle Buttons */
.collection-toggle-buttons {
  display: flex;
  gap: 0;
  margin: 2rem 0;
  position: relative;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 50px;
  padding: 4px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  justify-content: center;
}

.collection-btn {
  padding: 12px 32px;
  border: none;
  background: transparent;
  color: #666;
  font-weight: 600;
  font-size: 14px;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  cursor: pointer;
  border-radius: 50px;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 2;
  text-decoration: none;
}

.collection-btn.active {
  color: #fff;
  background: linear-gradient(135deg, #2d2d2d 0%, #000 100%);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.collection-btn:not(.active):hover {
  color: #333;
  transform: translateY(-1px);
}

.lookbook-link {
  font-size: 14px;
  color: #666;
  text-decoration: underline;
  margin: 1rem 0;
  display: inline-block;
  transition: color 0.3s ease;
}

.lookbook-link:hover {
  color: #333;
}

.no-minimum {
  font-size: 12px;
  color: #999;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  margin-top: 1rem;
  display: block;
}

/* Enhanced Collection Items */
.product-count-{{productBlockCount}} .banner__box{
  padding: 0;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 2rem;
  list-style: none;
  justify-content: center;
  max-width: 1000px;
  margin: 0 auto;
}

.collection-item {
  position: relative;
  cursor: pointer;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 16px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  transform: translateY(0);
}

.collection-item:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.product-link {
  display: block;
  text-decoration: none;
  color: inherit;
  padding: 1rem;
}

.product-image-wrapper {
  position: relative;
  overflow: hidden;
  border-radius: 12px;
  margin-bottom: 1rem;
}

.product-image {
  width: 100%;
  height: 250px;
  object-fit: cover;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.collection-item:hover .product-image {
  transform: scale(1.05);
}

.hover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.4s ease;
}

.collection-item:hover .hover-overlay {
  opacity: 1;
}

.product-title {
  font-size: 14px;
  font-weight: 600;
  color: #333;
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.product-price {
  font-size: 12px;
  color: #666;
  font-weight: 500;
}

.banner-bottom-text {
  margin-top: 2rem;
  text-align: center;
  font-size: 14px;
  color: #666;
}

/* Animation Keyframes */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .product-count-{{productBlockCount}} .banner__box {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    padding: 0 1rem;
  }
  
  .collection-toggle-buttons {
    flex-direction: column;
    gap: 8px;
    padding: 8px;
  }
  
  .collection-btn {
    padding: 10px 20px;
    font-size: 12px;
  }
  
  .product-image {
    height: 200px;
  }
}

@media (max-width: 480px) {
  .product-count-{{productBlockCount}} .banner__box {
    grid-template-columns: 1fr 1fr;
  }
  
  .genuineblanks-logo {
    font-size: 2rem;
  }
}

/* Legacy grid adjustments for different product counts */
ul.banner__box {
  list-style: none;
  padding: 0;
  margin: 2rem 0;
}

ul.banner__box li.item-banner img {
  border: 0 none;
}

.product-count-{{productBlockCount}} ul.banner__box li {
  display: block;
  margin: 0 !important;
}


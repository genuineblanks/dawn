            {%- if section.settings.card4_others_image != blank -%}
              {{ section.settings.card4_others_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- endif -%}
            <div class="comparison-text">
              <p>{{ section.settings.card4_others_text | default: "No photos. No updates. Just a vague timeline and silence." }}</p>
            </div>
          </div>
          <div class="split-comparison__side split-comparison__us">
            <span class="split-label">Us</span>
            {%- if section.settings.card4_us_image != blank -%}
              {{ section.settings.card4_us_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {%- endif -%}

<style>
  .text-grid {
    --color-base-text: #1a1a1a;
    --color-base-background-1: #ffffff;
    --color-base-background-2: #f8f8f8;
    --font-body-family: 'Helvetica Neue', Arial, sans-serif;
    --font-heading-family: 'Helvetica Neue', Arial, sans-serif;
    --font-body-weight: 400;
    --font-heading-weight: 600;
    --font-body-scale: 1;
    --animation-ease: cubic-bezier(0.25, 0.46, 0.45, 0.94);
    --animation-duration: 0.3s;
  }

  .textGrid {
    width: 100%;
    margin: 0;
    padding: 0;
    background: transparent;
  }

  /* Full width button sections */
  .textGrid .text-grid-button {
    display: block;
    width: 100%;
    margin: 0;
    padding: 80px 60px;
    text-decoration: none;
    color: inherit;
    transition: all var(--animation-duration) var(--animation-ease);
    position: relative;
    cursor: pointer;
    overflow: hidden;
    border: none;
    text-align: center;
  }

  .textGrid .text-grid-button .grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 40px;
    align-items: start;
    list-style: none;
    padding: 0;
    margin: 0;
    max-width: 1200px;
    margin: 0 auto;
  }

  .textGrid .text-grid-button .grid__item {
    position: relative;
  }

  .textGrid .text-grid-button .grid__item h3 {
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    font-size: 1.4rem;
    line-height: 1.3;
    margin: 0 0 12px 0;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: inherit;
  }

  .textGrid .text-grid-button .grid__item p,
  .textGrid .text-grid-button .grid__item div {
    font-family: var(--font-body-family);
    font-weight: var(--font-body-weight);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
    color: inherit;
    opacity: 0.8;
    letter-spacing: 0.02em;
  }

  /* Progressive gradient styling for each button */
  .textGrid .text-grid-button:nth-child(1) {
    background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
    color: #1a1a1a;
  }

  .textGrid .text-grid-button:nth-child(2) {
    background: linear-gradient(135deg, #f0f0f0 0%, #e8e8e8 100%);
    color: #2a2a2a;
  }

  .textGrid .text-grid-button:nth-child(3) {
    background: linear-gradient(135deg, #e0e0e0 0%, #d0d0d0 100%);
    color: #3a3a3a;
  }

  .textGrid .text-grid-button:nth-child(4) {
    background: linear-gradient(135deg, #c8c8c8 0%, #b8b8b8 100%);
    color: #4a4a4a;
  }

  .textGrid .text-grid-button:nth-child(5) {
    background: linear-gradient(135deg, #a8a8a8 0%, #989898 100%);
    color: #ffffff;
  }

  .textGrid .text-grid-button:nth-child(6) {
    background: linear-gradient(135deg, #808080 0%, #707070 100%);
    color: #ffffff;
  }

  .textGrid .text-grid-button:nth-child(7) {
    background: linear-gradient(135deg, #606060 0%, #505050 100%);
    color: #ffffff;
  }

  .textGrid .text-grid-button:nth-child(8) {
    background: linear-gradient(135deg, #404040 0%, #303030 100%);
    color: #ffffff;
  }

  .textGrid .text-grid-button:nth-child(9) {
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
    color: #ffffff;
  }

  .textGrid .text-grid-button:nth-child(10) {
    background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%);
    color: #ffffff;
  }

  /* Hover animations - pop effect */
  .textGrid .text-grid-button:hover {
    transform: scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    z-index: 10;
  }

  .textGrid .text-grid-button:active {
    transform: scale(1.01);
    transition-duration: 0.1s;
  }

  /* Click animation overlay - ripple effect */
  .textGrid .text-grid-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
    pointer-events: none;
    z-index: 1;
  }

  .textGrid .text-grid-button.clicked::before {
    width: 500px;
    height: 500px;
  }

  /* Responsive design */
  @media screen and (max-width: 1024px) {
    .textGrid .text-grid-button {
      padding: 60px 40px;
    }
    
    .textGrid .text-grid-button .grid {
      gap: 30px;
    }
  }

  @media screen and (max-width: 768px) {
    .textGrid .text-grid-button {
      padding: 50px 20px;
    }
    
    .textGrid .text-grid-button .grid {
      grid-template-columns: 1fr;
      gap: 20px;
      text-align: center;
    }
    
    .textGrid .text-grid-button .grid__item h3 {
      font-size: 1.2rem;
    }
    
    .textGrid .text-grid-button .grid__item p,
    .textGrid .text-grid-button .grid__item div {
      font-size: 0.85rem;
    }
  }

  @media screen and (max-width: 480px) {
    .textGrid .text-grid-button {
      padding: 40px 16px;
    }
    
    .textGrid .text-grid-button .grid__item h3 {
      font-size: 1.1rem;
      margin-bottom: 8px;
    }
  }

  /* Loading animation for smooth entry */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .textGrid .text-grid-button {
    animation: fadeInUp 0.6s ease forwards;
  }

  .textGrid .text-grid-button:nth-child(1) { animation-delay: 0.1s; }
  .textGrid .text-grid-button:nth-child(2) { animation-delay: 0.2s; }
  .textGrid .text-grid-button:nth-child(3) { animation-delay: 0.3s; }
  .textGrid .text-grid-button:nth-child(4) { animation-delay: 0.4s; }
  .textGrid .text-grid-button:nth-child(5) { animation-delay: 0.5s; }
  .textGrid .text-grid-button:nth-child(6) { animation-delay: 0.6s; }
  .textGrid .text-grid-button:nth-child(7) { animation-delay: 0.7s; }
  .textGrid .text-grid-button:nth-child(8) { animation-delay: 0.8s; }
  .textGrid .text-grid-button:nth-child(9) { animation-delay: 0.9s; }
  .textGrid .text-grid-button:nth-child(10) { animation-delay: 1.0s; }

  /* Enhanced typography */
  .textGrid .text-grid-button .grid__item h3 {
    font-weight: 700;
    letter-spacing: 0.1em;
  }

  .textGrid .text-grid-button .grid__item p strong,
  .textGrid .text-grid-button .grid__item div strong {
    font-weight: 600;
    opacity: 1;
  }

  .textGrid .text-grid-button .grid__item p em,
  .textGrid .text-grid-button .grid__item div em {
    font-style: italic;
    opacity: 0.7;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add click animation
  const gridButtons = document.querySelectorAll('.textGrid .text-grid-button');
  
  gridButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      // Add clicked class for ripple effect
      this.classList.add('clicked');
      
      // Remove clicked class after animation
      setTimeout(() => {
        this.classList.remove('clicked');
      }, 600);
    });
    
    // Enhanced hover effects
    button.addEventListener('mouseenter', function() {
      this.style.zIndex = '10';
    });
    
    button.addEventListener('mouseleave', function() {
      this.style.zIndex = '1';
    });
  });
  
  // Intersection Observer for scroll animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, observerOptions);
  
  // Observe buttons for scroll animations
  gridButtons.forEach(button => {
    button.style.opacity = '0';
    button.style.transform = 'translateY(30px)';
    button.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
    observer.observe(button);
  });
});
</script>

<div class="textGrid color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding"
     style="margin-top: {{ section.settings.margin_top }}px; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  {% for block in section.blocks %} 
    {%- case block.type -%}
      {%- when 'Add-text-grid' -%}
      <a href="{{ block.settings.link }}" class="text-grid-button" data-block-id="{{ block.id }}">
        <ul class="grid product-grid grid--2-col-tablet-down grid--3-col-desktop">
          <li class="grid__item">
            <h3>{{ block.settings.title }}</h3>
          </li>
          <li class="grid__item">
            <h3>{{ block.settings.subtitle }}</h3>
          </li> 
          <li class="grid__item">
            {{ block.settings.rich }}
          </li>
        </ul>
      </a>
      
      {%- when 'image' -%}
      <div class="text-grid-image-block" style="text-align: {{ block.settings.alignment }}; padding: 40px 20px;">
        {%- if block.settings.image != blank -%}
          <img src="{{ block.settings.image | image_url: width: block.settings.image_width }}"
               alt="{{ block.settings.image.alt | escape }}"
               width="{{ block.settings.image_width }}"
               height="auto"
               loading="lazy"
               style="max-width: {{ block.settings.image_width }}px; width: 100%; height: auto;">
        {%- endif -%}
        
        {%- if block.settings.title != blank -%}
          <h3 style="margin-top: 20px; font-family: var(--font-heading-family); font-weight: 600; color: var(--color-base-text);">{{ block.settings.title }}</h3>
        {%- endif -%}
        
        {%- if block.settings.richtext != blank -%}
          <div style="margin-top: 12px; font-family: var(--font-body-family); color: var(--color-base-text);">{{ block.settings.richtext }}</div>
        {%- endif -%}
      </div>
   {%- endcase -%}    
  {% endfor %}
</div>


      "label": "Enter buttton text",
      "id": "pdfbutton"
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "PDF List",
      "settings": [
        {
          "type": "image_picker",
          "label": "Enter PDF image",
          "id": "pdfimage"
        },
        {
          "type": "url",
          "label": "PDF URL",
          "id": "pdfurl"
        },
        {
          "type": "text",
          "label": "Enter Name",
          "id": "pdfname"
        },
        {
          "type": "text",
          "label": "Enter PDF info",
          "id": "pdfinfo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "PDF Download",
      "category": "Custom"
    }
  ]
}

{% endschema %}
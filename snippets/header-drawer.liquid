          <!-- Enhanced Learn More JavaScript -->
          <script>
            document.addEventListener('DOMContentLoaded', function() {
              const learnMoreDetails = document.getElementById('menu-drawer-learn-more');
              const mainMenu = document.querySelector('.menu-drawer__menu');
              const menuItems = document.querySelectorAll('.menu-drawer__menu-item');
              
              if (learnMoreDetails && mainMenu) {
                let isAnimating = false;
                
                // Enhanced toggle functionality
                learnMoreDetails.addEventListener('toggle', function(e) {
                  if (isAnimating) return;
                  isAnimating = true;
                  
                  const isOpen = learnMoreDetails.open;
                  
                  if (isOpen) {
                    // Expanding - fade out menu items with stagger
                    menuItems.forEach((item, index) => {
                      setTimeout(() => {
                        item.style.transition = 'all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                        item.style.opacity = '0.2';
                        item.style.transform = 'translateX(-15px) scale(0.98)';
                        item.style.pointerEvents = 'none';
                      }, index * 50);
                    });
                    
                    // Add expanded class for additional styling
                    setTimeout(() => {
                      learnMoreDetails.classList.add('expanded');
                      isAnimating = false;
                    }, 300);
                    
                  } else {
                    // Collapsing - fade in menu items with stagger
                    learnMoreDetails.classList.remove('expanded');
                    
                    setTimeout(() => {
                      menuItems.forEach((item, index) => {
                        setTimeout(() => {
                          item.style.transition = 'all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                          item.style.opacity = '';
                          item.style.transform = '';
                          item.style.pointerEvents = '';
                        }, index * 30);
                      });
                    }, 100);
                    
                    setTimeout(() => {
                      isAnimating = false;
                    }, 500);
                  }
                });
                
                // Smooth scroll for long content
                const learnMoreContent = document.querySelector('.menu-drawer__learn-more-content');
                if (learnMoreContent) {
                  learnMoreContent.addEventListener('scroll', function() {
                    // Add subtle shadow when scrolled
                    const scrollTop = this.scrollTop;
                    if (scrollTop > 10) {
                      this.style.boxShadow = 'inset 0 10px 20px -10px rgba(0, 0, 0, 0.1)';
                    } else {
                      this.style.boxShadow = '';
                    }
                  });
                }
                
                // Enhanced keyboard navigation
                learnMoreDetails.addEventListener('keydown', function(e) {
                  if (e.key === 'Escape' && learnMoreDetails.open) {
                    learnMoreDetails.open = false;
                    learnMoreDetails.querySelector('summary').focus();
                  }
                });
                
                // Accessibility improvements
                const summary = learnMoreDetails.querySelector('summary');
                if (summary) {
                  summary.setAttribute('aria-expanded', 'false');
                  summary.setAttribute('aria-controls', 'menu-drawer-learn-more-content');
                  
                  // Update aria-expanded when toggled
                  learnMoreDetails.addEventListener('toggle', function() {
                    summary.setAttribute('aria-expanded', learnMoreDetails.open.toString());
                  });
                }
                
                const content = learnMoreDetails.querySelector('.menu-drawer__learn-more-content');
                if (content) {
                  content.setAttribute('id', 'menu-drawer-learn-more-content');
                  content.setAttribute('role', 'region');
                  content.setAttribute('aria-labelledby', 'learn-more-heading');
                }
              }
            });
          </script>
          
          <div class="menu-drawer__utility-links">
            {%- if shop.customer_accounts_enabled -%}

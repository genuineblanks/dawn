  "name": "TechPack V10 Step 1",
  "settings": [
    {
      "type": "header",
      "content": "Client Information Step"
    },
    {
      "type": "text",
      "id": "step_title",
      "label": "Step Title",
      "default": "Client Information"
    },
    {
      "type": "text",
      "id": "step_subtitle",
      "label": "Step Subtitle",
      "default": "Premium studio-style client verification and business details setup"
    }
  ],
  "presets": [
    {
      "name": "TechPack V10 Step 1"
    }
  ]
}

{{ 'text-grid-v2.css' | asset_url | stylesheet_tag }}

<section class="tg-v2-section" data-theme="{{ section.settings.color_scheme }}">
  <div class="tg-v2-container">
    <div class="tg-v2-cards-grid">

      {%- comment -%} CARD 1: SHOWROOM {%- endcomment -%}
      <a href="{{ section.settings.card1_url }}" class="tg-v2-card" data-card="1">
        {% if section.settings.card1_bg_image != blank %}
          <div class="tg-v2-card-background">
            <img src="{{ section.settings.card1_bg_image | image_url: width: 1000 }}"
                 alt="{{ section.settings.card1_title }}"
                 loading="lazy"
                 class="tg-v2-bg-image">
            <div class="tg-v2-card-overlay"></div>
          </div>
        {% endif %}

        <div class="tg-v2-card-content">
          {% if section.settings.card1_badge != blank %}
            <span class="tg-v2-badge">{{ section.settings.card1_badge }}</span>
          {% endif %}

          {% if section.settings.card1_title != blank %}
            <h2 class="tg-v2-card-title">{{ section.settings.card1_title }}</h2>
          {% endif %}

          {% if section.settings.card1_description != blank %}
            <p class="tg-v2-card-description">{{ section.settings.card1_description }}</p>
          {% endif %}

          <span class="tg-v2-card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </div>
      </a>

      {%- comment -%} CARD 2: WHAT DO YOU NEED TO GET STARTED {%- endcomment -%}
      <a href="{{ section.settings.card2_url }}" class="tg-v2-card" data-card="2">
        {% if section.settings.card2_bg_image != blank %}
          <div class="tg-v2-card-background">
            <img src="{{ section.settings.card2_bg_image | image_url: width: 1000 }}"
                 alt="{{ section.settings.card2_title }}"
                 loading="lazy"
                 class="tg-v2-bg-image">
            <div class="tg-v2-card-overlay"></div>
          </div>
        {% endif %}

        <div class="tg-v2-card-content">
          {% if section.settings.card2_badge != blank %}
            <span class="tg-v2-badge">{{ section.settings.card2_badge }}</span>
          {% endif %}

          {% if section.settings.card2_title != blank %}
            <h2 class="tg-v2-card-title">{{ section.settings.card2_title }}</h2>
          {% endif %}

          {% if section.settings.card2_description != blank %}
            <p class="tg-v2-card-description">{{ section.settings.card2_description }}</p>
          {% endif %}

          <span class="tg-v2-card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </div>
      </a>

      {%- comment -%} CARD 3: ABOUT US {%- endcomment -%}
      <a href="{{ section.settings.card3_url }}" class="tg-v2-card" data-card="3">
        {% if section.settings.card3_bg_image != blank %}
          <div class="tg-v2-card-background">
            <img src="{{ section.settings.card3_bg_image | image_url: width: 1000 }}"
                 alt="{{ section.settings.card3_title }}"
                 loading="lazy"
                 class="tg-v2-bg-image">
            <div class="tg-v2-card-overlay"></div>
          </div>
        {% endif %}

        <div class="tg-v2-card-content">
          {% if section.settings.card3_badge != blank %}
            <span class="tg-v2-badge">{{ section.settings.card3_badge }}</span>
          {% endif %}

          {% if section.settings.card3_title != blank %}
            <h2 class="tg-v2-card-title">{{ section.settings.card3_title }}</h2>
          {% endif %}

          {% if section.settings.card3_description != blank %}
            <p class="tg-v2-card-description">{{ section.settings.card3_description }}</p>
          {% endif %}

          <span class="tg-v2-card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </div>
      </a>

      {%- comment -%} CARD 4: CONTACT US {%- endcomment -%}
      <a href="{{ section.settings.card4_url }}" class="tg-v2-card" data-card="4">
        {% if section.settings.card4_bg_image != blank %}
          <div class="tg-v2-card-background">
            <img src="{{ section.settings.card4_bg_image | image_url: width: 1000 }}"
                 alt="{{ section.settings.card4_title }}"
                 loading="lazy"
                 class="tg-v2-bg-image">
            <div class="tg-v2-card-overlay"></div>
          </div>
        {% endif %}

        <div class="tg-v2-card-content">
          {% if section.settings.card4_badge != blank %}
            <span class="tg-v2-badge">{{ section.settings.card4_badge }}</span>
          {% endif %}

          {% if section.settings.card4_title != blank %}
            <h2 class="tg-v2-card-title">{{ section.settings.card4_title }}</h2>
          {% endif %}

          {% if section.settings.card4_description != blank %}
            <p class="tg-v2-card-description">{{ section.settings.card4_description }}</p>
          {% endif %}

          <span class="tg-v2-card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </div>
      </a>

    </div>
  </div>
</section>

<script src="{{ 'text-grid-v2.js' | asset_url }}" defer></script>


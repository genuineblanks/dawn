  "class": "pdfDndSection",
  "tag": "section",
  "settings": [
    {
      "type": "richtext",
      "label": "Enter Info",
      "id": "pdfsecinfotext"
    },
    {
      "type": "text",
      "label": "Enter Email id",
      "id": "pdfemail"
    },
    {

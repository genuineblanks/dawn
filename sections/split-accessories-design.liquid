{%- style -%}
  #AccessoriesDesign-{{ section.id }} .service-half {
    min-height: {{ section.settings.section_height }}vh;
  }
  
  #AccessoriesDesign-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
  
  {% if section.settings.accessories_bg_image != blank %}
    #AccessoriesDesign-{{ section.id }} .accessories-half {
      background-image: linear-gradient(135deg, rgba(33,37,41,0.{{ section.settings.overlay_opacity }}), rgba(52,58,64,0.{{ section.settings.overlay_opacity | minus: 15 }})), 
                        url('{{ section.settings.accessories_bg_image | image_url: width: 1920 }}');
    }
  {% endif %}
  
  {% if section.settings.design_bg_image != blank %}
    #AccessoriesDesign-{{ section.id }} .design-half {
      background-image: linear-gradient(135deg, rgba(248,249,250,0.{{ section.settings.overlay_opacity }}), rgba(233,236,239,0.{{ section.settings.overlay_opacity | minus: 15 }})), 
                        url('{{ section.settings.design_bg_image | image_url: width: 1920 }}');
    }
  {% endif %}
  
  #AccessoriesDesign-{{ section.id }} .accessories-half .content-center {
    color: {{ section.settings.accessories_text_color }};
  }
  
  #AccessoriesDesign-{{ section.id }} .design-half .content-center {
    color: {{ section.settings.design_text_color }};
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<div
  id="AccessoriesDesign-{{ section.id }}"
  class="services-section services-section--{{ section.settings.section_height }}vh{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %} {{ section.settings.dynamic_class }}"
>
  {%- if section.settings.accessories_bg_image != blank -%}
    <div class="service-half accessories-half" onclick="goToAccessories{{ section.id }}()">
      <div class="service-media">
        {{
          section.settings.accessories_bg_image
          | image_url: width: 1920
          | image_tag:
            width: section.settings.accessories_bg_image.width,
            height: section.settings.accessories_bg_image.height,
            class: 'service-bg-image',
            sizes: '50vw',
            widths: '375, 550, 750, 1100, 1500, 1780, 2000',
            fetchpriority: fetch_priority
        }}
      </div>
      <div class="content-center">
        {%- for block in section.blocks -%}
          {%- if block.settings.service_type == 'accessories' -%}
            {%- case block.type -%}
              {%- when 'heading' -%}
                <h2 class="service-title {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                  {{ block.settings.heading | default: section.settings.accessories_title }}
                </h2>
              {%- when 'text' -%}
                <div class="service-text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                  {{ block.settings.text | default: section.settings.accessories_description }}
                </div>
              {%- when 'feature_list' -%}
                {%- if block.settings.show_features -%}
                  <ul class="feature-list" {{ block.shopify_attributes }}>
                    {%- if block.settings.feature_1 != blank -%}
                      <li>{{ block.settings.feature_1 }}</li>
                    {%- endif -%}
                    {%- if block.settings.feature_2 != blank -%}
                      <li>{{ block.settings.feature_2 }}</li>
                    {%- endif -%}
                    {%- if block.settings.feature_3 != blank -%}
                      <li>{{ block.settings.feature_3 }}</li>
                    {%- endif -%}
                  </ul>
                {%- endif -%}
              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="explore-button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                    onclick="goToAccessories{{ section.id }}(); return false;"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.button_label }}
                  </a>
                {%- endif -%}
            {%- endcase -%}
          {%- endif -%}
        {%- endfor -%}
        
        {%- comment -%} Fallback content if no blocks {%- endcomment -%}
        {%- unless section.blocks.size > 0 -%}
          <h2 class="service-title">{{ section.settings.accessories_title | default: 'Accessories' }}</h2>
          <p class="service-subtitle">{{ section.settings.accessories_subtitle | default: '& Branding Solutions' }}</p>
          <p class="service-description">
            {{ section.settings.accessories_description | default: 'Create anything for your brand: hang-tags, labels, flyers. You create, we produce.' }}
          </p>
          <ul class="feature-list">
            <li>{{ section.settings.accessories_feature_1 | default: 'Branding labels' }}</li>
            <li>{{ section.settings.accessories_feature_2 | default: 'Hang-tags' }}</li>
            <li>{{ section.settings.accessories_feature_3 | default: 'Composition labels' }}</li>
          </ul>
          <a href="{{ section.settings.accessories_url | default: '#' }}" class="explore-button" onclick="goToAccessories{{ section.id }}(); return false;">
            {{ section.settings.accessories_button_text | default: 'Check Our Accessories' }}
          </a>
        {%- endunless -%}
        
        {%- if section.settings.show_click_hint -%}
          <div class="click-hint">{{ section.settings.click_hint_text | default: 'Click to Enter' }}</div>
        {%- endif -%}
      </div>
    </div>
  {%- else -%}
    <div class="service-half accessories-half" onclick="goToAccessories{{ section.id }}()">
      <div class="service-media placeholder">
        {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
      <div class="content-center">
        <h2 class="service-title">{{ section.settings.accessories_title | default: 'Accessories' }}</h2>
        <p class="service-subtitle">{{ section.settings.accessories_subtitle | default: '& Branding Solutions' }}</p>
        <p class="service-description">
          {{ section.settings.accessories_description | default: 'Create anything you need for your brand: hang-tags, labels, flyers. You create, well produce.' }}
        </p>
        <a href="{{ section.settings.accessories_url | default: '#' }}" class="explore-button" onclick="goToAccessories{{ section.id }}(); return false;">
          {{ section.settings.accessories_button_text | default: 'Check Our Accessories' }}
        </a>
      </div>
    </div>
  {%- endif -%}

  {%- if section.settings.design_bg_image != blank -%}
    <div class="service-half design-half" onclick="goToDesign{{ section.id }}()">
      <div class="service-media">
        {{
          section.settings.design_bg_image
          | image_url: width: 1920

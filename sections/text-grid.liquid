  text-shadow: none;
  transition: all 0.3s ease;
  font-feature-settings: "kern" 1, "liga" 1;
  text-align: center;
  align-self: center;
}

.textGrid a:hover .grid__item h3 {
  transform: scale(1.03);
  letter-spacing: 0.28em;
  text-shadow: none;
}

.textGrid a:hover .grid__item p,
.textGrid a:hover .grid__item div {
  transform: translateY(-3px);
  letter-spacing: 0.1em;
  text-shadow: none;
}

